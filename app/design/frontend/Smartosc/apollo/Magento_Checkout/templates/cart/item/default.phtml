$_item = $block->getItem();
$product = $_item->getProduct();
$canApplyMsrp = false;
/** @var SM\Checkout\ViewModel\CartItem $viewModel */
$viewModel = $block->getData('viewModel');
$itemStock = $viewModel->getItemStock($product->getId(), $_item);
