                </label>
                <a id="add-cart-item-<?= $block->escapeHtmlAttr($_item->getId()) ?>"
                   data-bind="attr: {
                            'data-cart-item': + <?= $block->escapeHtmlAttr($_item->getId()) ?>,
                            title: '+'
                            }"
                   itemId="<?= $_item->getId() ?>"
                   class="add-cart-item increase-qty <?= $viewModel->isEnableQtyIncrease($_item, $itemStock) ? '' : 'disabled' ?>"
                   itemstock="<?php echo $itemStock; ?>"
                    <?= $viewModel->isEnableQtyIncrease($_item, $itemStock) ? '' : 'readonly="true"' ?>
                >
                    <span class="instock-<?= $_item->getId() ?>" data-bind="i18n: '+'">+</span>
                    <span class="out-stock-<?= $_item->getId() ?> dpl-tooltip" style="display:none">
                            <span data-bind="i18n: '+'">+</span>
                            <span class="tooltip-content" id="tooltip-1" role="tooltip">
                                <?= __('Sorry, you have reached the maximum number of items for this product.') ?>
                            </span>
                        </span>
                </a>
            </div>
        </div>
    </td>

    <td class="col subtotal" data-th="<?= $block->escapeHtmlAttr(__('Subtotal')) ?>">
        <?php if ($canApplyMsrp) : ?>
            <span class="cart msrp subtotal">--</span>
        <?php else : ?>
            <?= $block->getRowTotalHtml($_item) ?>
        <?php endif; ?>



    </td>
</tr>
