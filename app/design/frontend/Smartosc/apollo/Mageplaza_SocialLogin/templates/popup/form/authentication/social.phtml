use Mageplaza\SocialLogin\Block\Popup\Social;
use Mageplaza\SocialLogin\Model\System\Config\Source\Position;

/** @var Social $block  */

?>
<?php $availableSocials = $block->getAvailableSocials(); ?>
<?php if ($block->canShow(Position::PAGE_POPUP) && sizeof($availableSocials)) : ?>
    <div class="block social-login-authentication-channel sociallogin-block ">
        <div class="title-login--center ">
            <?php
                $parentBlockClass = get_class($block->getParentBlock());
                if (strpos($parentBlockClass, 'Login') !== false) {
                    $title = __('or sign in with');
                } else {
                    $title = __('or sign up with');
                }
            ?>
            <span><?= $title ?></span>
        </div>
        <div class="block-content">
            <?php foreach ($availableSocials as $key => $social) : ?>
                <div class="actions-toolbar social-btn <?= $key ?>-login">
                    <a class="btn btn-block"
                       data-mage-init='{"socialProvider": {"url": "<?= $social['login_url'] ?>", "label": "<?= __('Login By %1', $social['label']) ?>"}}'>

                        <img class="sociallogin-button-icon-image" src="<?php echo $this->getViewFileUrl('SM_Customer::images/'.$block->getBtnKey($key).'.png'); ?>"/>
                    </a>
                </div>
            <?php endforeach; ?>
        </div>
    </div>
    <script type="text/javascript">
        require(['jquery'], function ($) {
            $('#social-login-authentication').removeClass('mp-12').addClass('mp-7');
        });
    </script>
<?php endif; ?>

<?php
/**
 * Add variable to show social buttons on customer authentication popup
 */
?>
<?php $authenConfig = $block->getSocialButtonsConfig(); ?>
<?php if ($block->canShow(Position::PAGE_AUTHEN) && sizeof($availableSocials)) : ?>
    <script>
        window.socialAuthenticationPopup = <?= Zend_Json::encode($authenConfig); ?>;
    </script>
<?php endif; ?>
