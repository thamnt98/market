<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="breadcrumbs">
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Gift Registry</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Gift Registry</item>
                    <item name="label" xsi:type="string">Gift Registry</item>
                </argument>
            </action>
        </referenceBlock>

        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="index-help" before="-"
                   template="Magento_GiftRegistry::html/MyGift/create-registry.phtml"/>
        </referenceContainer>

    </body>
</page>
