                                           title="<?= $block->escapeHtmlAttr($_item->getName()) ?>"
                                           href="<?= $block->escapeUrl($block->getProductUrl($_item)) ?>"
                                           <?php if ($data) : ?>
                                           data-gtm-product="<?= $block->escapeHtml($data); ?>"
                                           data-gtm-position="<?= $position; ?>"
                                           data-gtm-list="<?= $block->escapeHtml($title) ?>"
