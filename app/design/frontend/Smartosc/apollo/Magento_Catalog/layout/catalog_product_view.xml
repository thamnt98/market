<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="mage/gallery/gallery.css"/>
    </head>
    <update handle="catalog_product_opengraph" />
    <update handle="page_calendar"/>
    <body>
        <move element="product.info.sku" destination="page.main.title" after="-"/>
        <referenceContainer name="product.info.media">
            <block class="Magento\Catalog\Block\Product\View\Gallery" name="product.info.media.image" template="Magento_Catalog::product/view/gallery.phtml">
                <arguments>
                    <argument name="gallery_options" xsi:type="object">Magento\Catalog\Block\Product\View\GalleryOptions</argument>
                </arguments>
            </block>
        </referenceContainer>
        <!--create element to group-->
        <referenceContainer name="content">
            <container name="main.detail.info" htmlTag="div" htmlClass="main-detail-info" before="-"/>
        </referenceContainer>
        <!--move element create group product detail page-->
        <move element="product.info.main" destination="main.detail.info" after="-"/>
        <move element="product.info.media" destination="main.detail.info" after="product.info.main"/>
        <move element="content.aside" destination="content" after="main.detail.info"/>
<!--        <move element="product.info.social" destination="product.info.addtocart" after="-" />-->
        <referenceContainer name="product.info.main">
            <!--template object connect in product detail page-->
            <block class="Magento\Catalog\Block\Product\View" name="object-connect-info" template="Magento_Catalog::product/view/pdp/object-connect-info.phtml" after="product.info.price"/>
        </referenceContainer>
        <referenceContainer name="before.body.end">
            <!--template popup object connect in product detail page-->
            <block class="SM\Catalog\Block\Product\View" name="pdp-delivery"
                   template="Magento_Catalog::product/view/pdp/delivery.phtml"/>
            <block class="SM\Catalog\Block\Product\View" name="pdp-store-pickup"
                   template="Magento_Catalog::product/view/pdp/store-pickup-wrapper.phtml"/>
        </referenceContainer>
        <!--create tab delivery and return-->
        <referenceBlock name="product.info.details">
            <block class="Magento\Catalog\Block\Product\View\Description" name="product.info.description" as="description" template="Magento_Catalog::customtab/attribute.phtml" group="detailed_info">
                <arguments>
                    <argument name="at_call" xsi:type="string">getDescription</argument>
                    <argument name="at_code" xsi:type="string">description</argument>
                    <argument name="css_class" xsi:type="string">description</argument>
                    <argument name="at_label" xsi:type="string">none</argument>
                    <argument name="title" translate="true" xsi:type="string">Descriptions</argument>
                    <argument name="sort_order" xsi:type="string">10</argument>
                    <argument name="is_dynamic" xsi:type="boolean">true</argument>
                </arguments>
            </block>
            <block class="Magento\Catalog\Block\Product\View\Attributes" name="product.attributes" as="additional" template="Magento_Catalog::customtab/attributes.phtml" group="detailed_info">
                <arguments>
                    <argument translate="true" name="title" xsi:type="string">Size & Fit</argument>
                    <argument name="sort_order" xsi:type="string">20</argument>
                    <argument name="is_dynamic" xsi:type="boolean">true</argument>
                </arguments>
            </block>
            <block class="SM\Catalog\Block\Product\View" name="delivery.return.tab" as="delivery.return" template="Magento_Catalog::customtab/delivery_return.phtml" group="detailed_info">
                <arguments>
                    <argument translate="true" name="title" xsi:type="string">Delivery and Return Information</argument>
                    <argument name="sort_order" xsi:type="string">30</argument>
                    <argument name="is_dynamic" xsi:type="boolean">false</argument>
                </arguments>
            </block>
        </referenceBlock>
        <!--remove product info description default-->
        <referenceBlock name="product.info.overview" remove="true"/>
        <!--add product info description custom-->
        <referenceContainer name="product.info.main">
            <!--template object connect in product detail page-->
            <block class="Magento\Catalog\Block\Product\View\Description" name="product.custom.short.description" template="Magento_Catalog::product/view/short_description.phtml" group="detailed_info" after="product.info.extrahint">
                <arguments>
                    <argument name="at_call" xsi:type="string">getShortDescription</argument>
                    <argument name="at_code" xsi:type="string">short_description</argument>
                    <argument name="css_class" xsi:type="string">overview</argument>
                    <argument name="at_label" xsi:type="string">none</argument>
                    <argument name="title" translate="true" xsi:type="string">Overview</argument>
                    <argument name="add_attribute" xsi:type="string">itemprop="description"</argument>
                </arguments>
            </block>
        </referenceContainer>

        <referenceContainer name="product.info.price">
            <!--badge discount PDP-->
            <block class="SM\Catalog\Block\Product\View" name="pdp-badge-discount"
                   template="SM_Catalog::product/view/badge-discount.phtml" before="-"/>
        </referenceContainer>
    </body>
</page>
