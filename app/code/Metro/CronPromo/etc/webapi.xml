<?xml version="1.0" ?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
	<route url="/V1/metro-cronpromo/cronpromo" method="GET">
		<service class="Metro\CronPromo\Api\CronPromoManagementInterface" method="getCronPromo"/>
		<resources>
			<resource ref="anonymous"/>
		</resources>
	</route>

    <route url="/V1/metro-cronpromo/cronpromodata" method="GET">
		<service class="Metro\CronPromo\Api\CronPromoManagementInterface" method="getCronPromoData"/>
		<resources>
			<resource ref="anonymous"/>
		</resources>
	</route>
</routes>