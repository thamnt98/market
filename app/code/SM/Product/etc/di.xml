<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Repository -->
    <preference for="SM\Product\Api\Repository\ProductRepositoryInterface"
                type="SM\Product\Model\Repository\ProductRepository"/>
    <type name="SM\Product\Model\Repository\ProductRepository">
        <arguments>
            <argument name="collectionProcessor" xsi:type="object">Magento\Catalog\Model\Api\SearchCriteria\ProductCollectionProcessor</argument>
        </arguments>
    </type>

    <type name="Magento\ConfigurableProduct\Block\Product\View\Type\Configurable">
        <plugin name="SM_Product::Configurable_Allow_Product" type="SM\Product\Plugin\Block\Product\Configurable"/>
    </type>
    <preference for="Magento\TargetRule\Block\Catalog\Product\ProductList\Related" type="SM\Product\Block\Catalog\Product\ProductList\Related"/>
    <preference for="Magento\TargetRule\Block\Catalog\Product\ProductList\Upsell" type="SM\Product\Block\Catalog\Product\ProductList\Upsell"/>
</config>
