<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/store-locator/:id" method="GET">
        <service class="SM\StoreLocator\Api\StoreLocationRepositoryInterface" method="get"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/store-locator" method="GET">
        <service class="SM\StoreLocator\Api\StoreLocationRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/store-locator/getListStores" method="GET">
        <service class="SM\StoreLocator\Api\StoreLocationRepositoryInterface" method="getListStores"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
