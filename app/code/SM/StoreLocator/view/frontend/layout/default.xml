<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="header.container">
            <block class="SM\StoreLocator\Block\StoreLocation\Listing" name="find-in-store"
                   template="SM_StoreLocator::find-in-stores.phtml">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="store-location-listing" xsi:type="array">
                                <item name="component" xsi:type="string">SM_StoreLocator/js/view/store-locator</item>
                                <item name="displayArea" xsi:type="string">store-location-listing</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
