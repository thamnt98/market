<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="sm_help_topic" resource="default" engine="innodb" comment="Topic Table">
        <column xsi:type="int" name="topic_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Topic ID"/>
        <column xsi:type="varchar" name="path" nullable="false" length="50" comment="Path"/>
        <column xsi:type="smallint" name="level" nullable="false" comment="Level"/>
        <column xsi:type="int" name="parent_id" nullable="false" comment="Parent ID"/>
        <column xsi:type="int" name="position" nullable="false" comment="Position"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Created Date"/>
        <column xsi:type="varchar" name="url_key" nullable="false" length="50" comment="Url Key"/>
        <column xsi:type="varchar" name="image" nullable="true" length="255" comment="Image"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="topic_id"/>
        </constraint>
    </table>

    <table name="sm_help_topic_store" resource="default" engine="innodb" comment="Store Topic Relation Table">
        <column xsi:type="smallint" name="store_id" padding="5" unsigned="true" nullable="false" identity="false"
                comment="Store Id"/>
        <column xsi:type="int" name="topic_id" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Topic ID"/>
        <column xsi:type="varchar" name="name" nullable="false" length="255" comment="Name"/>
        <column xsi:type="smallint" name="status" nullable="false" default="1" comment="Status"/>
        <column xsi:type="varchar" name="description" nullable="true" length="255" comment="Description"/>
        <constraint xsi:type="unique" referenceId="PAIR_TOPIC_STORE_UNIQUE">
            <column name="topic_id"/>
            <column name="store_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="SM_HELP_TOPIC_STORE_TOPIC_ID_SM_HELP_BLOCK_ID"
                    table="sm_help_topic_store" column="topic_id" referenceTable="sm_help_topic"
                    referenceColumn="topic_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="SM_HELP_TOPIC_STORE_STORE_ID_STORE_STORE_ID"
                    table="sm_help_topic_store" column="store_id" referenceTable="store"
                    referenceColumn="store_id" onDelete="CASCADE"/>
        <index referenceId="SM_HELP_TOPIC_STORE_STORE_ID" indexType="btree">
            <column name="store_id"/>
        </index>
    </table>

    <table name="sm_help_question" resource="default" engine="innodb" comment="Question Table">
        <column xsi:type="int" name="question_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Topic ID"/>
        <column xsi:type="varchar" name="title" nullable="false" length="255" comment="Title"/>
        <column xsi:type="smallint" name="status" nullable="false" default="1" comment="Status"/>
        <column xsi:type="varchar" name="topic_ids" nullable="true" comment="topic ID"/>
        <column xsi:type="text" name="content" nullable="true" comment="Content"/>
        <column xsi:type="int" name="question_id_link" unsigned="true" nullable="true"
                comment="Question ID Link"/>
        <column xsi:type="int" name="sort_order" padding="6" unsigned="false" nullable="false" identity="false"
                default="0" comment="Sort Order"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Created Date"/>
        <column xsi:type="varchar" name="url_key" nullable="false" length="50" comment="Url Key"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="question_id"/>
        </constraint>
    </table>

    <table name="sm_help_question_store" resource="default" engine="innodb" comment="Store Topic Relation Table">
        <column xsi:type="smallint" name="store_id" padding="5" unsigned="true" nullable="false" identity="false"
                comment="Store Id"/>
        <column xsi:type="int" name="question_id" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Question ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="question_id"/>
            <column name="store_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="SM_HELP_QUESTION_STORE_QUESTION_ID_SM_HELP_QUESTION_ID"
                    table="sm_help_question_store" column="question_id" referenceTable="sm_help_question"
                    referenceColumn="question_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="SM_HELP_TOPIC_STORE_STORE_ID_STORE_STORE_ID"
                    table="sm_help_question_store" column="store_id" referenceTable="store"
                    referenceColumn="store_id" onDelete="CASCADE"/>
        <index referenceId="SM_HELP_QUESTION_STORE_STORE_ID" indexType="btree">
            <column name="store_id"/>
        </index>
    </table>
</schema>
