<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="page.main.title" remove="true"/>
        <referenceContainer name="content">
            <block class="SM\Help\Block\Help\View" name="help.view" template="SM_Help::view.phtml">
                <block class="Magento\Framework\View\Element\Template" name="help.search"
                       template="SM_Help::search.phtml">
                    <arguments>
                        <argument name="view_model" xsi:type="object">SM\Help\ViewModel\Search</argument>
                    </arguments>
                </block>
            </block>
        </referenceContainer>
        <move element="breadcrumbs" destination="help.view" after="help.search"/>
    </body>
</page>
