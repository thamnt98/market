<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="left">
            <referenceBlock name="sales_order_tabs">
                <action method="addTab">
                    <argument name="name" xsi:type="string">order_sub</argument>
                    <argument name="block" xsi:type="string">SM\Checkout\Block\Adminhtml\Sales\Tab\SubOrders</argument>
                </action>
            </referenceBlock>
        </referenceContainer>
        <referenceBlock name="order_totals">
                <block class="SM\Checkout\Block\Adminhtml\Sales\Order\Totals\ServiceFee" name="service_fee" as="service_fee"/>
        </referenceBlock>
    </body>
</page>
