<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="empty" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="checkout_cart_item_renderers"/>
    <referenceContainer name="content">
        <block class="Magento\Checkout\Block\Cart" name="checkout.cart" template="Magento_Checkout::cart.phtml" cacheable="false">
            <container name="checkout.cart.items" as="with-items">
                <container name="checkout.cart.container" htmlTag="div" htmlClass="cart-container" before="-">
                    <block class="Magento\Checkout\Block\Cart\Grid" name="checkout.cart.form" as="cart-items" template="Magento_Checkout::cart/form.phtml" after="cart.summary">
                        <block class="Magento\Framework\View\Element\RendererList" name="checkout.cart.item.renderers" as="renderer.list"/>
                        <block class="Magento\Framework\View\Element\Text\ListText" name="checkout.cart.order.actions"/>
                        <block class="Magento\Framework\View\Element\Template" name="checkout.cart.remove.selected" template="SM_Checkout::cart/remove-selected-items.phtml"/>
                        <block class="SM\FreshProduct\Block\Product\View"
                               name="checkout.item.price.fresh"
                               template="SM_FreshProduct::checkout/cart/fresh-item.phtml"/>
                        <arguments>
                            <argument name="viewModel" xsi:type="object">SM\Checkout\ViewModel\Checkout\Cart\Grid</argument>
                        </arguments>
                    </block>
                </container>
            </container>
        </block>
    </referenceContainer>
    <referenceBlock name="copyright" remove="true"/>
</page>
