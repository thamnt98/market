<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="breadcrumbs">
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Home</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Home</item>
                    <item name="label" xsi:type="string">Home</item>
                    <item name="link" xsi:type="string">/</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Cart</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Cart</item>
                    <item name="label" xsi:type="string">Cart</item>
                </argument>
            </action>
        </referenceBlock>

        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Cart</argument>
            </action>
        </referenceBlock>

        <!--<referenceBlock name="checkout.cart.shipping" remove="true"/>-->
        <referenceBlock name="checkout.cart.methods.multishipping" remove="true"/>

        <referenceBlock name="checkout.cart.form">
            <block class="Magento\Framework\View\Element\Template" name="checkout.cart.remove.selected" template="SM_Checkout::cart/remove-selected-items.phtml"/>
            <arguments>
                <argument name="viewModel" xsi:type="object">SM\Checkout\ViewModel\Checkout\Cart\Grid</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="checkout.cart.coupon2" remove="true"/>
        <referenceBlock name="checkout.cart.giftcardaccount" remove="true"/>
        <referenceBlock name="checkout.cart.order.actions.gift_options">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="giftOptionsCart" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="giftWrapping" xsi:type="array">
                                    <item name="config" xsi:type="array">
                                        <item name="componentDisabled" xsi:type="boolean">true</item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="checkout.cart.totals">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="block-totals" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="subtotal" xsi:type="array">
                                    <item name="component" xsi:type="string">SM_Checkout/js/view/cart/total/subtotal</item>
                                    <item name="config" xsi:type="array">
                                        <item name="template" xsi:type="string">SM_Checkout/cart/total/subtotal</item>
                                        <item name="excludingTaxMessage" xsi:type="string" translate="true">(Excl. Tax)</item>
                                        <item name="includingTaxMessage" xsi:type="string" translate="true">(Incl. Tax)</item>
                                    </item>
                                </item>
                                <item name="before_grandtotal" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="gift-wrapping-order-level" xsi:type="array">
                                            <item name="config" xsi:type="array">
                                                <item name="componentDisabled" xsi:type="boolean">true</item>
                                            </item>
                                        </item>
                                        <item name="gift-wrapping-item-level" xsi:type="array">
                                            <item name="config" xsi:type="array">
                                                <item name="componentDisabled" xsi:type="boolean">true</item>
                                            </item>
                                        </item>
                                        <item name="printed-card" xsi:type="array">
                                            <item name="config" xsi:type="array">
                                                <item name="componentDisabled" xsi:type="boolean">true</item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                                <item name="coupon" xsi:type="array">
                                    <item name="config" xsi:type="array">
                                        <item name="componentDisabled" xsi:type="boolean">true</item>
                                    </item>
                                </item>
                                <item name="giftCardAccount" xsi:type="array">
                                    <item name="config" xsi:type="array">
                                        <item name="componentDisabled" xsi:type="boolean">true</item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
