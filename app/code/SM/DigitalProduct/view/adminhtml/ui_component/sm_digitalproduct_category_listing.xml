<?xml version="1.0" ?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">sm_digitalproduct_category_listing.sm_digitalproduct_category_listing_data_source</item>
		</item>
	</argument>
	<settings>
		<spinner>sm_digitalproduct_category_columns</spinner>
		<deps>
			<dep>sm_digitalproduct_category_listing.sm_digitalproduct_category_listing_data_source</dep>
		</deps>
        <buttons>
            <button name="add">
                <url path="*/*/new"/>
                <class>primary</class>
                <label translate="true">Add new Category</label>
            </button>
        </buttons>
	</settings>
	<dataSource component="Magento_Ui/js/grid/provider" name="sm_digitalproduct_category_listing_data_source">
		<settings>
			<updateUrl path="mui/index/render"/>
		</settings>
		<aclResource>SM_DigitalProduct::category</aclResource>
		<dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider" name="sm_digitalproduct_category_listing_data_source">
			<settings>
				<requestFieldName>id</requestFieldName>
				<primaryFieldName>category_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<listingToolbar name="listing_top">
		<settings>
			<sticky>true</sticky>
		</settings>
		<bookmark name="bookmarks"/>
		<columnsControls name="columns_controls"/>
		<filters name="listing_filters"/>
		<paging name="listing_paging"/>
	</listingToolbar>
	<columns name="sm_digitalproduct_category_columns">
		<selectionsColumn name="ids" sortOrder="0">
			<settings>
				<indexField>category_id</indexField>
			</settings>
		</selectionsColumn>
		<column name="category_id" sortOrder="10">
			<settings>
				<filter>text</filter>
				<sorting>asc</sorting>
				<label translate="true">ID</label>
			</settings>
		</column>
        <column name="type" sortOrder="15">
            <settings>
                <label translate="true">Type</label>
                <editor>
                    <editorType>text</editorType>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
                </editor>
            </settings>
        </column>
		<column name="magento_category_ids" sortOrder="50" class="SM\DigitalProduct\Ui\Component\Listing\Column\Category\MagentoCategory">
            <settings>
                <filter>text</filter>
                <label translate="true">Magento Category</label>
                <editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">true</rule>
					</validation>
				</editor>
			</settings>
		</column>
        <actionsColumn class="SM\DigitalProduct\Ui\Component\Listing\Column\Category\Actions" name="actions" sortOrder="60">
            <settings>
                <indexField>category_id</indexField>
                <resizeEnabled>false</resizeEnabled>
                <resizeDefaultWidth>107</resizeDefaultWidth>
            </settings>
        </actionsColumn>
	</columns>
</listing>
