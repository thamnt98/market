<?xml version="1.0" ?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="breadcrumbs">
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Home</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Home</item>
                    <item name="label" xsi:type="string">Home</item>
                    <item name="link" xsi:type="string">{{baseUrl}}</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Top Up &amp; Billings</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Top Up &amp; Billings</item>
                    <item name="label" xsi:type="string">Top Up &amp; Billings</item>
                </argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <referenceBlock name="page.main.title" remove="true"/>
            <block class="Magento\Framework\View\Element\Template" name="digitalproduct.wrapper"
                   template="SM_DigitalProduct::wrapper.phtml">
                <block class="SM\DigitalProduct\Block\Banner" name="digitalproduct.banner"
                       template="SM_DigitalProduct::index/banner.phtml"/>
                <block class="Magento\Framework\View\Element\Template" name="quick.transaction" as="quick.transaction"
                       template="SM_DigitalProduct::quick-transaction.phtml">
                    <arguments>
                        <argument name="view_model" xsi:type="object">
                            SM\DigitalProduct\ViewModel\QuickTransaction
                        </argument>
                    </arguments>
                </block>
                <block class="SM\DigitalProduct\Block\Tab" name="digitalproduct.tab"
                       template="SM_DigitalProduct::index/tab.phtml"/>
            </block>
        </referenceContainer>
    </body>
</page>
