        <remove src="requirejs/require.js"/>
        <remove src="mage/requirejs/mixins.js"/>
        <remove src="requirejs-config.js"/>
        <remove src="SM_Theme::js/loading-size.js"/>
        <remove src="mage/polyfill.js"/>
    </head>
    <body>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="how_to_buy_content"
                   template="SM_DigitalProduct::mobileapp/how-to-buy.phtml"/>
