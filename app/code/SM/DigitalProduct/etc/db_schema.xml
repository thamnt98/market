<?xml version="1.0" ?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table comment="sm_digitalproduct_category Table" engine="innodb" name="sm_digitalproduct_category"
           resource="default">
        <column comment="Entity Id" identity="true" name="category_id" nullable="false" padding="6" unsigned="true" xsi:type="smallint"/>
        <constraint referenceId="PRIMARY" xsi:type="primary">
            <column name="category_id"/>
        </constraint>
        <column name="type" nullable="false" xsi:type="varchar" length="50"/>
        <column name="thumbnail" nullable="true" xsi:type="text" disabled="true"/>
        <column name="position" nullable="true" default="0" xsi:type="smallint" disabled="true"/>
        <column name="is_active" nullable="false" default="1" xsi:type="smallint" disabled="true"/>
        <column name="magento_category_ids" nullable="false" xsi:type="varchar" length="50"/>
    </table>
    <table comment="sm_digitalproduct_category_store Table" engine="innodb" name="sm_digitalproduct_category_store" resource="default">
        <column comment="Entity Id" identity="true" name="category_store_id" nullable="false" padding="6"
                unsigned="true" xsi:type="smallint"/>
        <constraint referenceId="PRIMARY" xsi:type="primary">
            <column name="category_store_id"/>
        </constraint>
        <column name="store_id" padding="5" unsigned="true" nullable="false" xsi:type="smallint"/>
        <column length="255" name="category_name" nullable="true" xsi:type="varchar" disabled="true"/>
        <column name="information" nullable="true" xsi:type="text"/>
        <column name="how_to_buy" nullable="true" xsi:type="text" disabled="true"/>
        <column name="tooltip" nullable="true" xsi:type="varchar" length="255"/>
        <column name="info" nullable="true" xsi:type="varchar" length="255"/>
        <column comment="Category Id" name="category_id" nullable="false" padding="6" unsigned="true" xsi:type="smallint"/>
        <constraint xsi:type="foreign" referenceId="CATEGORY_STORE_CATEGORY_ID_CATEGORY_CATEGORY_ID"
                    table="sm_digitalproduct_category_store" column="category_id" referenceTable="sm_digitalproduct_category"
                    referenceColumn="category_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="CATEGORY_STORE_STORE_ID_STORE_STORE_ID"
                    table="sm_digitalproduct_category_store" column="store_id" referenceTable="store"
                    referenceColumn="store_id" onDelete="CASCADE"/>

    </table>
    <table comment="sm_digitalproduct_operator_icon Table" engine="innodb" name="sm_digitalproduct_operator_icon" resource="default">
        <column comment="Entity Id" identity="true" name="operator_icon_id" nullable="false" padding="6" unsigned="true" xsi:type="smallint"/>
        <constraint referenceId="PRIMARY" xsi:type="primary">
            <column name="operator_icon_id"/>
        </constraint>
        <column name="operator_service" nullable="false" xsi:type="smallint"/>
        <column name="icon" nullable="true" xsi:type="text"/>
    </table>
</schema>
