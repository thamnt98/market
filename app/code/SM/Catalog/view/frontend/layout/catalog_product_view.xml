<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="SM_Catalog::css/jssocials.css"/>
        <css src="SM_Catalog::css/jssocials-theme-flat.css"/>
    </head>
    <body>


        <referenceBlock name="product.info.addtocart">
            <block class="Magento\Catalog\Block\Product\View"
                   name="product.buynow"
                   template="SM_Catalog::buynow-view.phtml"
                   before="-"/>
        </referenceBlock>
        <referenceBlock name="product.info.addtocart.additional">
            <block class="Magento\Catalog\Block\Product\View"
                   name="product.buynow.config"
                   template="SM_Catalog::buynow-view.phtml"
                   before="-"/>
        </referenceBlock>
        <referenceContainer name="product.info.media">
            <!--social share-->
            <block class="Magento\Catalog\Block\Product\View" name="social-sharing" template="SM_Catalog::social/socialshare.phtml" after="-"/>
        </referenceContainer>

        <referenceContainer name="page.bottom.container">
            <!--social share-->
            <block class="Magento\Catalog\Block\Product\View" name="social-sharing2"  as="social-sharing"  template="SM_Catalog::social/socialshare.phtml" after="-"/>
        </referenceContainer>

        <referenceBlock name="view.addto.compare">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">SM_Catalog::product/view/addto/compare.phtml</argument>
            </action>
            <arguments>
                <argument name="addToCompareViewModel" xsi:type="object">Magento\Catalog\ViewModel\Product\Checker\AddToCompareAvailability</argument>
            </arguments>
        </referenceBlock>

        <referenceBlock name="breadcrumbs">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">SM_Catalog::html/breadcrumbs.phtml</argument>
            </action>

            <block name="comparelink"
                   as="comparelink"
                   template="SM_Catalog::product/comparelink.phtml"
                   class="SM\Catalog\Block\Product\Compare\CompareLink">
            </block>
        </referenceBlock>

    </body>
</page>
