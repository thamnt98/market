<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="breadcrumbs">
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Home</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Home</item>
                    <item name="label" xsi:type="string">Home</item>
                    <item name="link" xsi:type="string">{{baseUrl}}</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Compare Products</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">Compare Products</item>
                    <item name="label" xsi:type="string" translate="true">Compare Products</item>
                </argument>
            </action>

            <action method="setTemplate">
                <argument name="template" xsi:type="string">SM_Catalog::html/breadcrumbs-compare.phtml</argument>
            </action>
            <block name="comparelink"
                   after="breadcrumbs"
                   template="SM_Catalog::product/comparelink.phtml"
                   class="SM\Catalog\Block\Product\Compare\CompareLink"/>
        </referenceBlock>

    </body>
</page>
