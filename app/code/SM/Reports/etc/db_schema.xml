<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="report_viewed_product_summary" resource="default" engine="innodb" comment="Report viewed product summary">
        <column xsi:type="bigint" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Entity ID"/>
        <column xsi:type="int" name="product_id" padding="10" unsigned="true" nullable="false" comment="Product ID"/>
        <column xsi:type="int" name="popularity" padding="10" unsigned="true" nullable="false" default="0"
                comment="Popularity"/>
        <column xsi:type="smallint" name="store_id" padding="5" unsigned="true" nullable="false" identity="false"
                comment="Store ID"/>
        <column xsi:type="int" name="customer_id" padding="10" unsigned="true" nullable="false" comment="Customer ID"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Creation Time"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Update Time"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="FK_REPORT_VIEWED_PRODUCT_SUMMARY_STORE_ID"
                    table="report_viewed_product_summary" column="store_id" referenceTable="store"
                    referenceColumn="store_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="FK_REPORT_VIEWED_PRODUCT_SUMMARY_CUSTOMER_ID"
                    table="report_viewed_product_summary" column="customer_id" referenceTable="customer_entity"
                    referenceColumn="entity_id" onDelete="CASCADE"/>
        <constraint xsi:type="unique" referenceId="UNQ_PRODUCT_ID_STORE_ID_CUSTOMER_ID">
            <column name="product_id"/>
            <column name="store_id"/>
            <column name="customer_id"/>
        </constraint>
        <index referenceId="REPORT_VIEWED_PRODUCT_SUMMARY_PRODUCT_ID" indexType="btree">
            <column name="product_id"/>
        </index>
        <index referenceId="REPORT_VIEWED_PRODUCT_SUMMARY_CUSTOMER_ID" indexType="btree">
            <column name="customer_id"/>
        </index>
        <index referenceId="REPORT_VIEWED_PRODUCT_SUMMARY_STORE_ID" indexType="btree">
            <column name="store_id"/>
        </index>
        <index referenceId="REPORT_VIEWED_PRODUCT_SUMMARY_CUSTOMER_ID_STORE_ID" indexType="btree">
            <column name="customer_id"/>
            <column name="store_id"/>
        </index>
    </table>
</schema>
