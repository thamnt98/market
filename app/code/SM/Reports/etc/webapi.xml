<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <!-- Recommendation products -->
    <route url="/V1/reports/mine/recommendation-products" method="GET">
        <service class="SM\Reports\Api\Repository\ReportViewedProductSummaryRepositoryInterface" method="getRecommendationProducts"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="customerId" force="true">%customer_id%</parameter>
        </data>
    </route>
</routes>
