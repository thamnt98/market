<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">pending_edit_listing.review_edit_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <spinner>review_edit_columns</spinner>
        <deps>
            <dep>pending_edit_listing.review_edit_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="review_edit_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <updateUrl path="mui/index/render"/>
        </settings>
        <dataProvider class="SM\Review\Ui\DataProvider\EditReview\DataProvider" name="review_edit_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <filterSearch name="fulltext"/>
<!--        <massaction name="listing_massaction">-->
<!--            <action name="delete">-->
<!--                <settings>-->
<!--                    <confirm>-->
<!--                        <message translate="true">Are you sure you want to delete selected items?</message>-->
<!--                        <title translate="true">Delete items</title>-->
<!--                    </confirm>-->
<!--                    <url path="cms/block/massDelete"/>-->
<!--                    <type>delete</type>-->
<!--                    <label translate="true">Delete</label>-->
<!--                </settings>-->
<!--            </action>-->
<!--        </massaction>-->
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="review_edit_columns">
        <selectionsColumn name="ids" sortOrder="10">
            <settings>
                <indexField>entity_id</indexField>
            </settings>
        </selectionsColumn>
        <column name="entity_id" sortOrder="20">
            <settings>
                <addField>true</addField>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>desc</sorting>
            </settings>
        </column>
        <column name="review_id" sortOrder="30">
            <settings>
                <addField>true</addField>
                <filter>textRange</filter>
                <label translate="true">Review ID</label>
            </settings>
        </column>
        <column name="title" sortOrder="40">
            <settings>
                <addField>true</addField>
                <filter>text</filter>
                <label translate="true">Title</label>
            </settings>
        </column>
        <column name="detail" sortOrder="50">
            <settings>
                <addField>true</addField>
                <filter>text</filter>
                <label translate="true">Detail</label>
            </settings>
        </column>
        <column name="vote_value" sortOrder="60">
            <settings>
                <addField>true</addField>
                <filter>textRange</filter>
                <label translate="true">Vote Value</label>
            </settings>
        </column>
        <column name="created_at" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date" sortOrder="70">
            <settings>
                <addField>true</addField>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Edit Date</label>
                <sorting>desc</sorting>
            </settings>
        </column>
        <actionsColumn name="actions" class="SM\Review\Ui\Component\Listing\Columns\ViewAction">
            <settings>
                <indexField>entity_id</indexField>
            </settings>
        </actionsColumn>
    </columns>
</listing>
