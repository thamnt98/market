<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">pending_edit_form.pending_edit_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Pending Edit Review Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        <item name="reverseMetadataMerge" xsi:type="boolean">true</item>
    </argument>
    <settings>
        <buttons>
            <button name="back" class="SM\Review\Block\Adminhtml\Form\Button\Back"/>
            <button name="reject" class="SM\Review\Block\Adminhtml\Form\Button\Reject"/>
            <button name="approve" class="SM\Review\Block\Adminhtml\Form\Button\Approve"/>
        </buttons>
        <namespace>pending_edit_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>pending_edit_form.pending_edit_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="pending_edit_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <dataProvider class="SM\Review\Ui\DataProvider\EditReview\Form\DataProvider" name="pending_edit_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="review_edit_content" sortOrder="30">
        <settings>
            <label translate="true">Review Edit Content</label>
        </settings>
        <field name="review_id" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="elementTmpl" xsi:type="string">SM_Review/review.html</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Review</label>
                <dataScope>review_url</dataScope>
            </settings>
        </field>
        <field name="html_rating" sortOrder="30" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="elementTmpl" xsi:type="string">SM_Review/rating.html</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Rating</label>
                <dataScope>vote_value</dataScope>
            </settings>
        </field>
        <field name="title" sortOrder="40" formElement="input">
            <settings>
                <dataType>string</dataType>
                <label translate="true">Title</label>
                <disabled>true</disabled>
            </settings>
        </field>
        <field name="detail" sortOrder="50" formElement="textarea">
            <settings>
                <dataType>string</dataType>
                <label translate="true">Detail</label>
                <disabled>true</disabled>
            </settings>
            <formElements>
                <textarea>
                    <settings>
                        <rows>8</rows>
                    </settings>
                </textarea>
            </formElements>
        </field>
        <field name="html_image" sortOrder="60" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="elementTmpl" xsi:type="string">SM_Review/images.html</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Images</label>
                <dataScope>images</dataScope>
            </settings>
        </field>
    </fieldset>
</form>
