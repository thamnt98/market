<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <!-- shopping-list -->
    <route url="/V1/shopping-lists/:shoppingListId" method="DELETE">
        <service class="SM\ShoppingList\Api\ShoppingListRepositoryInterface" method="delete"/>
        <resources>
            <resource ref="self" />
        </resources>
    </route>

    <route url="/V1/shopping-lists" method="POST">
        <service class="SM\ShoppingList\Api\ShoppingListRepositoryInterface" method="create"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="customerId" force="true">%customer_id%</parameter>
        </data>
    </route>

    <route url="/V1/shopping-lists/additems" method="POST">
        <service class="SM\ShoppingList\Api\ItemManagementInterface" method="addItem"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="customerId" force="true">%customer_id%</parameter>
        </data>
    </route>

    <route url="/V1/shopping-lists/update" method="PUT">
        <service class="SM\ShoppingList\Api\ShoppingListRepositoryInterface" method="update"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="customerId" force="true">%customer_id%</parameter>
        </data>
    </route>

    <route url="/V1/shopping-list-items" method="GET">
        <service class="SM\ShoppingList\Api\ShoppingListItemRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="self" />
        </resources>
    </route>

    <route url="/V1/shopping-list-items/:itemId" method="DELETE">
        <service class="SM\ShoppingList\Api\ShoppingListItemRepositoryInterface" method="deleteById"/>
        <resources>
            <resource ref="self" />
        </resources>
    </route>

    <route url="/V1/shopping-lists/favorites" method="GET">
        <service class="SM\ShoppingList\Api\ShoppingListRepositoryInterface" method="getFavorites"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="customerId" force="true">%customer_id%</parameter>
        </data>
    </route>

    <route url="/V1/shopping-lists/mylist" method="GET">
        <service class="SM\ShoppingList\Api\ShoppingListRepositoryInterface" method="getMyList"/>
        <resources>
            <resource ref="self"/>
        </resources>
        <data>
            <parameter name="customerId" force="true">%customer_id%</parameter>
        </data>
    </route>

    <route url="/V1/shopping-lists/:listId" method="GET">
        <service class="SM\ShoppingList\Api\ShoppingListRepositoryInterface" method="getListDetail"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>

    <route url="/V1/shopping-lists/all" method="GET">
        <service class="SM\ShoppingList\Api\ShoppingListRepositoryInterface" method="getAll"/>
        <resources>
            <resource ref="self"/>
        </resources>
        <data>
            <parameter name="customerId" force="true">%customer_id%</parameter>
        </data>
    </route>

    <route url="/V1/shopping-list-items/move" method="POST">
        <service class="SM\ShoppingList\Api\ShoppingListItemRepositoryInterface" method="move"/>
        <resources>
            <resource ref="self" />
        </resources>
    </route>
</routes>
