<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <head>
        <title>My Vouchers</title>
    </head>
    <body>
        <referenceBlock name="head.components">
            <block class="Magento\Framework\View\Element\Js\Components" name="customer_account_edit_head_components" template="Magento_Customer::js/components.phtml"/>
        </referenceBlock>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument name="title" translate="true" xsi:type="string">My Vouchers</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="customer-account-navigation-reward-link">
            <arguments>
                <argument name="is_highlighted" xsi:type="boolean">true</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="content">
            <block class="SM\MyVoucher\Block\Customer\MyVoucher" name="customer.voucher.info" template="SM_MyVoucher::customer/voucher/info.phtml" cacheable="false" />
        </referenceBlock>
        <referenceBlock name="breadcrumbs">
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">My Vouchers</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">My Vouchers</item>
                    <item name="label" xsi:type="string" translate="true">My Vouchers</item>
                </argument>
            </action>
        </referenceBlock>
    </body>
</page>
