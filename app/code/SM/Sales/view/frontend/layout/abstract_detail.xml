<?xml version="1.0" encoding="utf-8" ?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="breadcrumbs" remove="true"/>
        <referenceContainer name="page.top">
            <block class="Magento\Theme\Block\Html\Breadcrumbs" cacheable="false" name="custom_breadcrumbs">
                <action method="addCrumb">
                    <argument name="crumbName" xsi:type="string">Home</argument>
                    <argument name="crumbInfo" xsi:type="array">
                        <item name="title" xsi:type="string">Home</item>
                        <item name="label" xsi:type="string">Home</item>
                        <item name="link" xsi:type="string">{{baseUrl}}</item>
                    </argument>
                </action>
                <action method="addCrumb">
                    <argument name="crumbName" xsi:type="string">My Orders</argument>
                    <argument name="crumbInfo" xsi:type="array">
                        <item name="title" xsi:type="string">My Orders</item>
                        <item name="label" xsi:type="string" translate="true">My Orders</item>
                        <item name="link" xsi:type="string">{{baseUrl}}sales/order/history</item>
                    </argument>
                </action>
                <action method="addCrumb">
                    <argument name="crumbName" xsi:type="string">Order Details</argument>
                    <argument name="crumbInfo" xsi:type="array">
                        <item name="title" xsi:type="string">Order Details</item>
                        <item name="label" xsi:type="string" translate="true">Order Details</item>
                    </argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="page.messages">
            <block class="Magento\Framework\View\Element\Template" name="ajax.message.placeholder" template="Magento_Theme::html/messages.phtml"/>
            <block class="Magento\Framework\View\Element\Messages" name="messages" as="messages" template="Magento_Theme::messages.phtml"/>
        </referenceContainer>
    </body>
</page>
