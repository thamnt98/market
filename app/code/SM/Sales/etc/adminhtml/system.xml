<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="sm_sale" showInDefault="1" showInWebsite="1" showInStore="1" type="text" translate="label"
                 sortOrder="400">
            <label>Sales</label>
            <tab>transmart</tab>
            <resource>SM_Help::configurations</resource>
            <group id="general" translate="label" showInDefault="1" showInWebsite="10" showInStore="1" sortOrder="10">
                <label>General</label>
                <field id="update_main_status_by_event" translate="label" type="select" sortOrder="10"
                       showInDefault="1"
                       showInWebsite="0"
                       showInStore="0">
                    <label>Enable Update Main Order status when Sub-Order updating</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
