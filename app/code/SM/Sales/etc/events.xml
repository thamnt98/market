<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="sales_order_save_after">
        <observer name="create_status_history" instance="SM\Sales\Observer\StatusHistory" disabled="true"/>
        <observer name="update_status_parent" instance="SM\Sales\Observer\UpdateStatusObserver" disabled="true"/>
    </event>
    <event name="sales_order_save_commit_after">
        <observer name="update_status_parent" instance="SM\Sales\Observer\UpdateStatusObserver"/>
    </event>
    <event name="sales_model_service_quote_submit_before">
        <observer name="set_voucher_detail_data" instance="SM\Sales\Observer\SaveVoucherDetail"/>
    </event>
    <event name="email_order_set_template_vars_before">
        <observer name="set_email_new_order_data" instance="SM\Sales\Observer\SetEmailNewOrderData"/>
    </event>
    <event name="email_creditmemo_set_template_vars_before">
        <observer name="add_refund_account_data" instance="SM\Sales\Observer\CreditMemo\AddRefundDataToEmail"/>
    </event>
</config>
