<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <container name="root" label="Root" output="1">
        <block class="SM\Coachmarks\Block\Adminhtml\Topic\Edit\Tab\Tooltip" name="topic.edit.tab.tooltip"/>
        <block class="Magento\Backend\Block\Widget\Grid\Serializer" name="tooltip_grid_serializer">
            <arguments>
                <argument name="input_names" xsi:type="string">position</argument>
                <argument name="grid_block" xsi:type="string">topic.edit.tab.tooltip</argument>
                <argument name="callback" xsi:type="string">getSelectedTooltips</argument>
                <argument name="input_element_name" xsi:type="string">tooltips</argument>
                <argument name="reload_param_name" xsi:type="string">topic_tooltips</argument>
            </arguments>
        </block>
    </container>
</layout>
