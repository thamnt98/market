        <field name="image" sortOrder="50">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="source" xsi:type="string">notification</item>
                    <item name="label" xsi:type="string" translate="true">Image</item>
                    <item name="formElement" xsi:type="string">imageUploader</item>
                    <item name="elementTmpl" xsi:type="string">ui/form/element/uploader/image</item>
                    <item name="previewTmpl" xsi:type="string">Magento_Catalog/image-preview</item>
                    <item name="allowedExtensions" xsi:type="string">jpeg jpg gif png</item>
                    <item name="notice" xsi:type="string" translate="true">
                        <![CDATA[
                            Allowed file types: jpeg, jpg, gif, png.<br/>
                            Image's size is 118 x 118.
                        ]]>
                    </item>
                    <item name="uploaderConfig" xsi:type="array">
                        <item name="url" xsi:type="string">sm_filemanagement/file/upload</item>
                    </item>
                    <item name="required" xsi:type="boolean">false</item>
                </item>
            </argument>
        </field>
        <field name="content" template="ui/form/field" sortOrder="60" formElement="wysiwyg">
