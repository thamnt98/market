<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">notification_form.notification_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Notification Detail</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="SM\Notification\Ui\Component\Form\Button\Save"/>
            <button name="back" class="SM\Notification\Ui\Component\Form\Button\Back"/>
        </buttons>
        <namespace>notification_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>notification_form.notification_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="notification_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="*/*/save"/>
            <validateUrl path="*/*/validate"/>
        </settings>
        <dataProvider class="SM\Notification\Ui\Component\Form\DataProvider" name="notification_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="period">
        <settings>
            <label translate="true">Period Time</label>
        </settings>
        <field name="start_date" sortOrder="10" formElement="date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">notification</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Start Date</label>
                <dataScope>start_date</dataScope>
            </settings>
            <formElements>
                <date>
                    <settings>
                        <options>
                            <option name="showsTime" xsi:type="boolean">true</option>
                            <option name="dateFormat" xsi:type="string">M-d-yy</option>
                            <option name="timeFormat" xsi:type="string">HH:mm:ss</option>
                        </options>
                    </settings>
                </date>
            </formElements>
        </field>
        <field name="end_date" sortOrder="20" formElement="date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">notification</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">End Date</label>
                <dataScope>end_date</dataScope>
                <notice translate="true">
                    `End Date` must be after `Start Date`
                </notice>
            </settings>
            <formElements>
                <date>
                    <settings>
                        <options>
                            <option name="showsTime" xsi:type="boolean">true</option>
                            <option name="dateFormat" xsi:type="string">M-d-yy</option>
                            <option name="timeFormat" xsi:type="string">HH:mm:ss</option>
                        </options>
                    </settings>
                </date>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="web">
        <settings>
            <label translate="true">Information</label>
        </settings>
