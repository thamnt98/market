    <fieldset name="push">
        <settings>
            <label translate="true">Push to Device</label>
            <collapsible>true</collapsible>
        </settings>
        <field name="is_push" sortOrder="0" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">notification</item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Enabled</label>
                <dataScope>is_push</dataScope>
                <tooltip>
                    <description translate="true">Enable Push to Device</description>
                </tooltip>
                <dataType>number</dataType>
                <switcherConfig>
                    <rules>
                        <rule name="0">
                            <value>0</value>
                            <actions>
                                <action name="0">
                                    <target>notification_form.notification_form.push.push_title</target>
                                    <callback>disable</callback>
                                </action>
                                <action name="1">
                                    <target>notification_form.notification_form.push.push_content</target>
                                    <callback>disable</callback>
                                </action>
                            </actions>
                        </rule>
                        <rule name="1">
                            <value>1</value>
                            <actions>
                                <action name="0">
                                    <target>notification_form.notification_form.push.push_title</target>
                                    <callback>enable</callback>
                                </action>
                                <action name="1">
                                    <target>notification_form.notification_form.push.push_content</target>
                                    <callback>enable</callback>
                                </action>
                            </actions>
                        </rule>
                    </rules>
                    <enabled>true</enabled>
                </switcherConfig>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <prefer>toggle</prefer>
                        <valueMap>
                            <map name="false" xsi:type="boolean">0</map>
                            <map name="true" xsi:type="boolean">1</map>
                        </valueMap>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="push_title" sortOrder="10" formElement="input">
