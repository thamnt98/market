<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <sm_notification>
            <sync>
                <push_device>* * * * *</push_device>
                <sms>* * * * *</sms>
                <email>* * * * *</email>
            </sync>
            <generate>
                <limit_stock>0 0 * * *</limit_stock>
                <abandoned_cart>*/10 * * * *</abandoned_cart>
                <abandoned_cart_time>1</abandoned_cart_time>
                <abandoned_cart_repeat_time>3</abandoned_cart_repeat_time>
                <abandoned_cart_repeat>*/10 * * * *</abandoned_cart_repeat>
                <va_payment>sprint_bca_va</va_payment>
                <card_payment>sprint_mega_cc,sprint_mega_debit,sprint_allbankfull_cc,sprint_allbank_debit,trans_mepay_cc,trans_mepay_debit</card_payment>
                <payment_expiring_soon_time>5</payment_expiring_soon_time>
                <payment_expiring_soon_time_cron>* * * * *</payment_expiring_soon_time_cron>
                <payment_expired>*/5 * * * *</payment_expired>
                <remind_pickup_cron>0 * * * *</remind_pickup_cron>
                <pickup_expired>0 * * * *</pickup_expired>
                <remind_pickup>5</remind_pickup>
                <remind_pickup_expired>2</remind_pickup_expired>
            </generate>
            <event_type_config>
                <event_type><![CDATA[[{"event_type":"order_status","name":"Order Status","enable":"1"},{"event_type":"update","name":"Updates","enable":"1"},{"event_type":"service","name":"Services","enable":"1"}]]]></event_type>
            </event_type_config>
            <email>
                <payment_expired>sm_notification_email_payment_group_payment_expired</payment_expired>
                <payment_bank_reject>sm_notification_email_payment_group_payment_bank_reject</payment_bank_reject>
                <payment_system_failed>sm_notification_email_payment_group_payment_system_failed</payment_system_failed>
                <payment_system_failed_digital>sm_notification_email_payment_group_payment_system_failed_digital</payment_system_failed_digital>
                <payment_success_top_up>sm_notification_email_payment_group_payment_success_top_up</payment_success_top_up>
                <payment_success_mobile_package>sm_notification_email_payment_group_payment_success_mobile_package</payment_success_mobile_package>
                <payment_success_roaming>sm_notification_email_payment_group_payment_success_roaming</payment_success_roaming>
                <payment_success_pln_token>sm_notification_email_payment_group_payment_success_pln_token</payment_success_pln_token>
                <payment_success_pln_bill>sm_notification_email_payment_group_payment_success_pln_bill</payment_success_pln_bill>
                <payment_success_mobile_postpaid>sm_notification_email_payment_group_payment_success_mobile_postpaid</payment_success_mobile_postpaid>
                <payment_success_physical>sm_notification_email_payment_group_payment_success_physical</payment_success_physical>
                <order_failed_delivery>sm_notification_email_order_status_group_order_failed_delivery</order_failed_delivery>
            </email>
        </sm_notification>
    </default>
</config>
