<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework-message-queue:etc/queue.xsd">
    <broker topic="sm.notification.sms" exchange="magento" type="amqp">
        <queue name="sm.notification.sms" consumer="sm.notification.sms"
               consumerInstance="Magento\Framework\MessageQueue\Consumer"
               handler="SM\Notification\Model\Notification\Consumer\Sms::process"/>
    </broker>
    <broker topic="sm.notification.email" exchange="magento" type="amqp">
        <queue name="sm.notification.email" consumer="sm.notification.email"
               consumerInstance="Magento\Framework\MessageQueue\Consumer"
               handler="SM\Notification\Model\Notification\Consumer\Email::process"/>
    </broker>
    <broker topic="sm.notification.push" exchange="magento" type="amqp">
        <queue name="sm.notification.push" consumer="sm.notification.push"
               consumerInstance="Magento\Framework\MessageQueue\Consumer"
               handler="SM\Notification\Model\Notification\Consumer\Push::process"/>
    </broker>
</config>