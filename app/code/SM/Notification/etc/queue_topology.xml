<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework-message-queue:etc/topology.xsd">
    <exchange name="magento" type="topic" connection="amqp">
        <binding id="smNotificationSmsBinding" topic="sm.notification.sms"
                 destinationType="queue" destination="sm.notification.sms" />
        <binding id="smNotificationEmailBinding" topic="sm.notification.email"
                 destinationType="queue" destination="sm.notification.email" />
        <binding id="smNotificationPushBinding" topic="sm.notification.push"
                 destinationType="queue" destination="sm.notification.push" />
    </exchange>
</config>
