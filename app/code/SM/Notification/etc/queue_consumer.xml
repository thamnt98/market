<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework-message-queue:etc/consumer.xsd">
    <consumer name="sm.notification.email" queue="sm.notification.email" connection="amqp" maxMessages="5000"
              consumerInstance="Magento\Framework\MessageQueue\Consumer"
              handler="SM\Notification\Model\Notification\Consumer\Email::process" />
    <consumer name="sm.notification.sms" queue="sm.notification.sms" connection="amqp" maxMessages="5000"
              consumerInstance="Magento\Framework\MessageQueue\Consumer"
              handler="SM\Notification\Model\Notification\Consumer\Sms::process" />
    <consumer name="sm.notification.push" queue="sm.notification.push" connection="amqp" maxMessages="5000"
              consumerInstance="Magento\Framework\MessageQueue\Consumer"
              handler="SM\Notification\Model\Notification\Consumer\Push::process" />
</config>