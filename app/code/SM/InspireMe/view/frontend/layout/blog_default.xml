<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>

        <referenceBlock name="blog.sidebar.category.tree">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">SM_InspireMe::post/head/topics.phtml</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="blog.sidebar.search">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">SM_InspireMe::post/head/search.phtml</argument>
            </action>
        </referenceBlock>


        <move element="blog.sidebar.search" destination="blog.post.list.head"/>
        <move element="blog.sidebar.category.tree" destination="blog.post.list.head"/>

        <referenceContainer name="sidebar.main" remove="true"/>
        <referenceBlock name="blog.right" remove="true"/>
    </body>
</page>
