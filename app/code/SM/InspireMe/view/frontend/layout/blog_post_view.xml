<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="SM_Catalog::css/jssocials.css"/>
        <css src="SM_Catalog::css/jssocials-theme-flat.css"/>
    </head>
    <update handle="blog_default"/>
    <body>
        <referenceContainer name="content">
            <block class="SM\InspireMe\Block\Post\View\ViewsCount" name="blog.posts.views.count"
                   template="post/view/views_count.phtml"/>
        </referenceContainer>
        <referenceBlock name="blog.post.view">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">SM_InspireMe::post/view.phtml</argument>
            </action>

            <!--social share-->
            <block class="Magento\Framework\View\Element\Template" name="social.sharing"
                   template="SM_InspireMe::post/view/social-share.phtml" after="-"/>
            <block name="blog.post.most.popular" class="SM\InspireMe\Block\Post\View\MostPopular"
                   template="post/view/most_popular.phtml"/>
        </referenceBlock>
        <referenceBlock name="blog.post.related.products">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">SM_InspireMe::post/view/related_products.phtml</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="blog.post.related.posts" remove="true"/>
        <referenceBlock name="blog.post.comments" remove="true"/>
        <referenceBlock name="page.main.title" remove="true" />
    </body>
</page>
