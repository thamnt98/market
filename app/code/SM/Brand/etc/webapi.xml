<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <!-- Brand API-->
    <route url="/V1/shopbybrand/getFavoriteBrands" method="GET">
        <service class="SM\Brand\Api\BrandSliderRepositoryInterface" method="getBrandSlider"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/shopbybrand/getBrandProduct" method="GET">
        <service class="SM\Brand\Api\BrandRepositoryInterface" method="getBrandProduct"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
    <route url="/V1/shopbybrand/getBrandCms" method="GET">
        <service class="SM\Brand\Api\BrandRepositoryInterface" method="getBrandCms"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
</routes>
