<?xml version="1.0"?>

<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">
                sm_brand_add_brand_listing.sm_brand_add_brand_listing_data_source
            </item>
        </item>
    </argument>
    <settings>
        <buttons/>
        <spinner>sm_brand_add_brand_listing_columns</spinner>
        <deps>
            <dep>sm_brand_add_brand_listing.sm_brand_add_brand_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="sm_brand_add_brand_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Magento_Catalog::products</aclResource>
        <dataProvider class="Amasty\ShopbyBrand\Ui\DataProvider\Listing\DataProvider"
                      name="sm_brand_add_brand_listing_data_source">
            <settings>
                <requestFieldName>option_setting_id</requestFieldName>
                <primaryFieldName>option_setting_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <columns name="sm_brand_add_brand_listing_columns">
        <selectionsColumn name="ids" component="SM_Brand/js/grid/columns/on-off">
            <settings>
                <controlVisibility>false</controlVisibility>
                <indexField>option_setting_id</indexField>
            </settings>
        </selectionsColumn>
        <column name="title">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="editor" xsi:type="array">
                        <item name="editorType" xsi:type="string">text</item>
                        <item name="validation" xsi:type="array">
                            <item name="required-entry" xsi:type="boolean">true</item>
                        </item>
                    </item>
                    <item name="label" xsi:type="string" translate="true">Title</item>
                </item>
            </argument>
        </column>
    </columns>
</listing>
