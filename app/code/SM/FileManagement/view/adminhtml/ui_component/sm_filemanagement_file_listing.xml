<?xml version="1.0" ?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">sm_filemanagement_file_listing.sm_filemanagement_file_listing_data_source</item>
		</item>
	</argument>
	<settings>
		<spinner>sm_filemanagement_file_columns</spinner>
		<deps>
			<dep>sm_filemanagement_file_listing.sm_filemanagement_file_listing_data_source</dep>
		</deps>
		<buttons>
			<button name="add">
				<url path="*/*/new"/>
				<class>primary</class>
				<label translate="true">Add new File</label>
			</button>
		</buttons>
	</settings>
	<dataSource component="Magento_Ui/js/grid/provider" name="sm_filemanagement_file_listing_data_source">
		<settings>
			<updateUrl path="mui/index/render"/>
		</settings>
		<aclResource>SM_FileManagement::File</aclResource>
		<dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider" name="sm_filemanagement_file_listing_data_source">
			<settings>
				<requestFieldName>id</requestFieldName>
				<primaryFieldName>file_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<listingToolbar name="listing_top">
		<settings>
			<sticky>true</sticky>
		</settings>
		<bookmark name="bookmarks"/>
		<columnsControls name="columns_controls"/>
		<filters name="listing_filters"/>
		<paging name="listing_paging"/>
	</listingToolbar>
	<columns name="sm_filemanagement_file_columns">
		<settings>
			<editorConfig>
				<param name="selectProvider" xsi:type="string">sm_filemanagement_file_listing.sm_filemanagement_file_listing.sm_filemanagement_file_columns.ids</param>
				<param name="enabled" xsi:type="boolean">true</param>
				<param name="indexField" xsi:type="string">file_id</param>
				<param name="clientConfig" xsi:type="array">
					<item name="saveUrl" path="sm_filemanagement/File/inlineEdit" xsi:type="url"/>
					<item name="validateBeforeSave" xsi:type="boolean">false</item>
				</param>
			</editorConfig>
			<childDefaults>
				<param name="fieldAction" xsi:type="array">
					<item name="provider" xsi:type="string">sm_filemanagement_file_listing.sm_filemanagement_file_listing.sm_filemanagement_file_columns_editor</item>
					<item name="target" xsi:type="string">startEdit</item>
					<item name="params" xsi:type="array">
						<item name="0" xsi:type="string">${ $.$data.rowIndex }</item>
						<item name="1" xsi:type="boolean">true</item>
					</item>
				</param>
			</childDefaults>
		</settings>
		<selectionsColumn name="ids">
			<settings>
				<indexField>file_id</indexField>
			</settings>
		</selectionsColumn>
		<column name="file_id">
			<settings>
				<filter>text</filter>
				<sorting>asc</sorting>
				<label translate="true">ID</label>

			</settings>
		</column>
		<column name="title">
			<settings>
				<filter>text</filter>
				<label translate="true">Title</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>
		<column name="file_url" class="SM\FileManagement\Ui\Component\Listing\Column\FileUrl" >
			<settings>
				<filter>text</filter>
				<label translate="true">Path</label>
			</settings>
		</column>
        <actionsColumn class="SM\FileManagement\Ui\Component\Listing\Column\FileActions" name="actions">
            <settings>
                <indexField>file_id</indexField>
                <resizeEnabled>false</resizeEnabled>
                <resizeDefaultWidth>107</resizeDefaultWidth>
            </settings>
        </actionsColumn>
	</columns>
</listing>
