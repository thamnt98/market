<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="search_query_personal" resource="default" engine="innodb" comment="Customer search history">
        <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Entity ID"/>
        <column xsi:type="varchar" name="query_text" nullable="false" length="255" comment="Query text"/>
        <column xsi:type="smallint" name="store_id" padding="5" unsigned="true" nullable="false" default="0"
                comment="Store ID"/>
        <column xsi:type="int" name="customer_id" padding="10" unsigned="true" nullable="false" comment="Customer ID"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Creation Time"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Update Time"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="FK_SEARCH_QUERY_PERSONAL_STORE_ID" table="search_query_personal"
                    column="store_id" referenceTable="store" referenceColumn="store_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="FK_SEARCH_QUERY_PERSONAL_CUSTOMER_ID" table="search_query_personal"
                    column="customer_id" referenceTable="customer_entity" referenceColumn="entity_id"
                    onDelete="CASCADE"/>
        <constraint xsi:type="unique" referenceId="SEARCH_QUERY_PERSONAL_CUSTOMER_ID_QUERY_TEXT">
            <column name="customer_id"/>
            <column name="store_id"/>
            <column name="query_text"/>
        </constraint>
        <index referenceId="SEARCH_QUERY_PERSONAL_STORE_ID" indexType="btree">
            <column name="store_id"/>
        </index>
        <index referenceId="SEARCH_QUERY_PERSONAL_CUSTOMER_ID" indexType="btree">
            <column name="customer_id"/>
        </index>
    </table>
    <table name="search_query_category" resource="default" engine="innodb" comment="Search on category">
        <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Entity ID"/>
        <column xsi:type="varchar" name="query_text" nullable="false" length="255" comment="Query text"/>
        <column xsi:type="int" name="num_results" padding="10" unsigned="true" nullable="false" default="0"
                comment="Num results"/>
        <column xsi:type="int" name="popularity" padding="10" unsigned="true" nullable="false" default="0"
                comment="Popularity"/>
        <column xsi:type="smallint" name="store_id" padding="5" unsigned="true" nullable="false" default="0"
                comment="Store ID"/>
        <column xsi:type="int" name="category_id" padding="10" unsigned="true" nullable="false" comment="Category ID"/>
        <column xsi:type="int" name="query_id" padding="10" unsigned="true" nullable="true" comment="Query ID"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Creation Time"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Update Time"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="FK_SEARCH_QUERY_CATEGORY_CATEGORY_ID" table="search_query_category"
                    column="category_id" referenceTable="catalog_category_entity" referenceColumn="entity_id"
                    onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="FK_SEARCH_QUERY_CATEGORY_STORE_ID" table="search_query_category"
                    column="store_id" referenceTable="store" referenceColumn="store_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="FK_SEARCH_QUERY_CATEGORY_QUERY_ID" table="search_query_category"
                    column="query_id" referenceTable="search_query" referenceColumn="query_id" onDelete="CASCADE"/>
        <constraint xsi:type="unique" referenceId="SEARCH_QUERY_QUERY_TEXT_STORE_ID_CATEGORY_ID">
            <column name="query_text"/>
            <column name="store_id"/>
            <column name="category_id"/>
        </constraint>
        <index referenceId="SEARCH_QUERY_CATEGORY_CATEGORY_ID" indexType="btree">
            <column name="category_id"/>
        </index>
        <index referenceId="SEARCH_QUERY_CATEGORY_STORE_ID" indexType="btree">
            <column name="store_id"/>
        </index>
        <index referenceId="SEARCH_QUERY_CATEGORY_QUERY_ID" indexType="btree">
            <column name="query_id"/>
        </index>
        <index referenceId="SEARCH_QUERY_CATEGORY_CATEGORY_ID_STORE_ID" indexType="btree">
            <column name="category_id"/>
            <column name="store_id"/>
        </index>
    </table>
</schema>
