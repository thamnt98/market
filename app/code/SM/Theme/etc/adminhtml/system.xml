<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="transmart_general" translate="label" type="text" sortOrder="10" showInDefault="1"
                 showInWebsite="1" showInStore="1">
            <label>Theme General</label>
            <tab>transmart</tab>
            <resource>SM_Theme::configuration</resource>
            <group id="header" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Header</label>
                <field id="transmart_app_url" type="text" translate="label comment" sortOrder="1" canRestore="1"
                       showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Transmart App URL</label>
                </field>
            </group>
        </section>
        <section id="lookbook" translate="label" type="text" sortOrder="800" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Hot Spots</label>
            <tab>transmart</tab>
            <resource>SM_Theme::hot_spots</resource>
            <group id="slider" translate="label" type="text" sortOrder="20" showInDefault="0" showInWebsite="0" showInStore="0"/>
        </section>
    </system>
</config>
