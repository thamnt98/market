<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_type.xsd">
    <type name="image">
        <appearances>
            <appearance name="full-width">
                <elements>
                    <element name="main">
                        <attribute name="promo_id" source="data-promo-id"/>
                        <attribute name="promo_name" source="data-promo-name"/>
                        <attribute name="promo_creative" source="data-promo-creative"/>
                    </element>
                </elements>
            </appearance>
        </appearances>
    </type>
</config>
