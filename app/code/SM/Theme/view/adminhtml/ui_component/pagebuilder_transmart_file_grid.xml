<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">pagebuilder_transmart_file_grid.pagebuilder_transmart_file_grid_data_source</item>
        </item>
    </argument>
    <settings>
        <spinner>columns</spinner>
        <deps>
            <dep>pagebuilder_transmart_file_grid.pagebuilder_transmart_file_grid_data_source</dep>
        </deps>
    </settings>
    <dataSource name="pagebuilder_transmart_file_grid_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
            </item>
        </argument>
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">file_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Magento_Cms::block</aclResource>
        <dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider" name="pagebuilder_transmart_file_grid_data_source">
            <settings>
                <requestFieldName>file_id</requestFieldName>
                <primaryFieldName>file_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <filterSearch name="title"/>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="columns">
        <settings>
            <childDefaults>
                <param name="clickAction" xsi:type="string">view</param>
                <param name="actionField" xsi:type="string">actions</param>
                <param name="controlVisibility" xsi:type="boolean">true</param>
            </childDefaults>
        </settings>
        <column name="file_id" sortOrder="10">
            <settings>
                <label translate="true">ID</label>
                <filter>textRange</filter>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="title">
            <settings>
                <dataType>text</dataType>
                <filter>title</filter>
                <label translate="true">Title</label>
            </settings>
        </column>
        <column name="file_name">
            <settings>
                <filter>identifier</filter>
                <label translate="true">File Name</label>
            </settings>
        </column>
        <selectionsColumn name="ids" component="Magento_PageBuilder/js/grid/cells/single-select">
            <settings>
                <indexField>file_id</indexField>
            </settings>
        </selectionsColumn>
    </columns>
</listing>
