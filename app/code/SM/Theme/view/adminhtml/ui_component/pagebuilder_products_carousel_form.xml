<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" extends="pagebuilder_products_form">
    <fieldset name="appearance_fieldset">
        <field name="title" sortOrder="15" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Title</label>
                <dataScope>title</dataScope>
            </settings>
        </field>
        <field name="link" sortOrder="16" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">View All URL</label>
                <dataScope>link</dataScope>
            </settings>
        </field>
        <field name="show_cart" sortOrder="100" formElement="select" component="Magento_PageBuilder/js/form/element/select-filtered-options">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">2</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Show Add To Cart Button</label>
                <dataScope>show_cart</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="SM\Theme\Model\Config\Source\ShowCartOptions"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="settings" sortOrder="30">
        <field name="carousel_products_display" sortOrder="65" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="number">4</item>
                </item>
            </argument>
            <settings>
                <dataType>number</dataType>
                <label translate="true">Number of Products to Display in Carousel</label>
                <additionalClasses>
                    <class name="admin__field-small">true</class>
                </additionalClasses>
                <dataScope>carousel_products_display</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                    <rule name="less-than-equals-to" xsi:type="number">10</rule>
                    <rule name="greater-than-equals-to" xsi:type="number">1</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
</form>
