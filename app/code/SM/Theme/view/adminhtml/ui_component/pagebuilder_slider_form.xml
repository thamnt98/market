<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" extends="pagebuilder_base_form">
    <fieldset name="appearance_fieldset">
        <field name="appearance" formElement="select" sortOrder="10" component="Magento_PageBuilder/js/form/element/dependent-visual-select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">default</item>
                </item>
            </argument>
            <settings>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                    <class name="admin__field-visual-select-container">true</class>
                </additionalClasses>
                <dataType>text</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <elementTmpl>Magento_PageBuilder/form/element/visual-select</elementTmpl>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="AppearanceTransSlider" />
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="block_title" sortOrder="15" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Title</label>
                <dataScope>block_title</dataScope>
            </settings>
        </field>
        <field name="navigation_style" sortOrder="70" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">style-1</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Navigation Style</label>
                <dataScope>navigation_style</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">style-1</item>
                                <item name="label" xsi:type="string" translate="true">Style 1</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">style-2</item>
                                <item name="label" xsi:type="string" translate="true">Style 2</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">style-3</item>
                                <item name="label" xsi:type="string" translate="true">Style 3</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="settings" sortOrder="20">
        <field name="slider_option" sortOrder="0" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">large</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Slider Option</label>
                <dataScope>slider_option</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">large</item>
                                <item name="label" xsi:type="string" translate="true">Large</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">medium</item>
                                <item name="label" xsi:type="string" translate="true">Medium</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="promotion" sortOrder="50">
        <settings>
            <label translate="true">Promotion</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="promo_id" sortOrder="5" formElement="input">
            <settings>
                <dataType>number</dataType>
                <label translate="true">Promo ID</label>
                <dataScope>promo_id</dataScope>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="promo_name" sortOrder="10" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Promo Name</label>
                <dataScope>promo_name</dataScope>
            </settings>
        </field>
        <field name="promo_creative" sortOrder="15" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Promo Creative</label>
                <dataScope>promo_creative</dataScope>
            </settings>
        </field>
    </fieldset>
</form>
