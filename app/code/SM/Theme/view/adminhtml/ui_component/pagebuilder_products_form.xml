<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" extends="pagebuilder_base_form">
    <fieldset name="appearance_fieldset">
        <field name="title" sortOrder="15" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Title</label>
                <dataScope>title</dataScope>
            </settings>
        </field>
        <field name="link" sortOrder="16" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">View All URL</label>
                <dataScope>link</dataScope>
            </settings>
        </field>
        <field name="show_cart" sortOrder="100" formElement="select" component="Magento_PageBuilder/js/form/element/select-filtered-options">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">2</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Show Add To Cart Button</label>
                <dataScope>show_cart</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="SM\Theme\Model\Config\Source\ShowCartOptions"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="show_review" sortOrder="110" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">false</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Show Review</label>
                <dataScope>show_review</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="string">false</map>
                            <map name="true" xsi:type="string">true</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
    </fieldset>
</form>
