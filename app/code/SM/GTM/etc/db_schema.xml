<?xml version="1.0"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="basket" resource="default" engine="innodb" comment="basket table">
        <column xsi:type="int"  name="basket_id" nullable="false" identity="true" unsigned="true" comment="basket_id"/>
        <column xsi:type="int" name="customer_id" nullable="false" comment="customer_id"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="basket_id"/>
        </constraint>
        <index referenceId="BASKET_TABLE_INDEX" indexType="btree">
            <column name="basket_id"/>
            <column name="customer_id"/>
        </index>
    </table>
</schema>
