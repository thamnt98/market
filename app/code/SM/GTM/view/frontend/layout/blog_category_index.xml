<?xml version="1.0" encoding="UTF-8"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="SM\InspireMe\Block\Post\PostList" name="gtm-inspireme-list"
                   template="SM_GTM::post/list.phtml" ifconfig="sm_gtm/general/is_active" after="-">
            </block>
        </referenceContainer>

        <referenceBlock name="blog.post.list">
            <arguments>
                <argument name="gtm_view_model" xsi:type="object">SM\GTM\Block\Post\PostList</argument>
            </arguments>
        </referenceBlock>

        <referenceBlock name="blog.sidebar.category.tree">
            <arguments>
                <argument name="gtm_view_model" xsi:type="object">SM\GTM\Block\Post\PostList</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
