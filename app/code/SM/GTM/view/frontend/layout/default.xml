<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="head.additional">
            <block class="SM\GTM\Block\Page\EntryPoint" name="smartosc_gtm_default"
                   template="SM_GTM::collect_data.phtml" ifconfig="sm_gtm/general/is_active">
                <arguments>
                    <argument name="current_layout_handler" xsi:type="string">default</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template"
                   name="gtm-live-chat"
                   template="SM_GTM::live_chat.phtml"
                   ifconfig="sm_gtm/general/is_active"
                   after="-" />
        </referenceContainer>
        <referenceBlock name="related_products_impression" remove="true"/>
        <referenceBlock name="upsell_products_impression" remove="true"/>
        <referenceBlock name="crosssell_products_impression" remove="true"/>
        <referenceBlock name="product_list_impression" remove="true"/>
        <referenceBlock name="advanced_result_impression" remove="true"/>
        <referenceBlock name="search_result_impression" remove="true"/>
    </body>
</page>
