<?xml version="1.0" encoding="UTF-8"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="SM\InspireMe\Block\Post\View" name="gtm-inspireme-view"
                   template="SM_GTM::post/view.phtml" ifconfig="sm_gtm/general/is_active" after="-">
            </block>
        </referenceContainer>
        <referenceBlock name="blog.post.related.products">
            <arguments>
                <argument name="gtm_view_model" xsi:type="object">SM\GTM\Block\Product\View</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="blog.post.most.popular">
            <arguments>
                <argument name="gtm_view_model" xsi:type="object">SM\GTM\Block\Post\PostList</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
