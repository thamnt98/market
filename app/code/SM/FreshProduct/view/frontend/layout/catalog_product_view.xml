<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!--Fresh Product-->
        <referenceContainer name="product.info.price">
            <block class="SM\FreshProduct\Block\Product\View"
                   name="fresh-product-detail"
                   template="SM_FreshProduct::product/fresh-product.phtml"
                   after="product.price.final"/>
        </referenceContainer>

        <referenceContainer name="page.main.title">
            <block class="SM\FreshProduct\Block\Product\View"
                   name="fresh.product.title"
                   template="SM_FreshProduct::product/fresh-title.phtml"
                   before="-">
            </block>
        </referenceContainer>

        <block class="SM\FreshProduct\Block\Product\View"
               name="product.fresh"
               template="SM_FreshProduct::checkout/cart/fresh-item.phtml"
        />
    </body>
</page>
