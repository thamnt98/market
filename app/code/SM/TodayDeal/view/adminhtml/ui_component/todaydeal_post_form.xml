<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">todaydeal_post_form.post_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Page Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="SM\TodayDeal\Block\Adminhtml\Post\Edit\SaveButton"/>
            <button name="delete" class="SM\TodayDeal\Block\Adminhtml\Post\Edit\DeleteButton"/>
            <button name="back" class="SM\TodayDeal\Block\Adminhtml\Post\Edit\BackButton"/>
        </buttons>
        <namespace>todaydeal_post_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>todaydeal_post_form.post_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="post_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="todaydeal/post/save"/>
        </settings>
        <dataProvider class="SM\TodayDeal\Model\DataProvider" name="post_form_data_source">
            <settings>
                <requestFieldName>post_id</requestFieldName>
                <primaryFieldName>post_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label/>
        </settings>
        <field name="post_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>post_id</dataScope>
            </settings>
        </field>
        <field name="is_active" sortOrder="1" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Enable</label>
                <dataScope>is_active</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="storeviews" sortOrder="10" formElement="multiselect">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>int</dataType>
                <label translate="true">Store View</label>
                <dataScope>store_id</dataScope>
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                        <options class="Magento\Cms\Ui\Component\Listing\Column\Cms\Options"/>
                    </settings>
                </multiselect>
            </formElements>
        </field>
        <field name="title" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Title</label>
                <dataScope>title</dataScope>
            </settings>
        </field>
        <field name="thumbnail">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="source" xsi:type="string">post</item>
                    <item name="label" xsi:type="string" translate="true">Thumbnail</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="formElement" xsi:type="string">imageUploader</item>
                    <item name="elementTmpl" xsi:type="string">ui/form/element/uploader/image</item>
                    <item name="previewTmpl" xsi:type="string">Magento_Catalog/image-preview</item>
                    <item name="required" xsi:type="boolean">true</item>
                    <item name="uploaderConfig" xsi:type="array">
                        <item name="url" xsi:type="url" path="sm_filemanagement/file/upload"/>
                    </item>
                    <item name="notice" xsi:type="string" translate="true">
                        Recommend image size 434x268
                    </item>
                </item>
            </argument>
        </field>
        <field name="sort_order"  formElement="input">
            <settings>
                <dataType>number</dataType>
                <label translate="true">Sort Order</label>
                <dataScope>sort_order</dataScope>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
    <fieldset name="content" sortOrder="10">
        <settings>
            <collapsible>true</collapsible>
            <label translate="true">Content</label>
        </settings>
        <field name="content_heading" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Content Heading</label>
                <dataScope>content_heading</dataScope>
            </settings>
        </field>
        <field name="content" formElement="wysiwyg">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                </item>
            </argument>
            <settings>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                </additionalClasses>
                <label/>
                <dataScope>content</dataScope>
            </settings>
            <formElements>
                <wysiwyg>
                    <settings>
                        <wysiwyg>true</wysiwyg>
                    </settings>
                </wysiwyg>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="search_engine_optimisation" sortOrder="20">
        <settings>
            <collapsible>true</collapsible>
            <label translate="true">Search Engine Optimization</label>
        </settings>
        <field name="identifier" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">URL Key</label>
                <dataScope>identifier</dataScope>
            </settings>
        </field>
        <field name="meta_title" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Meta Title</label>
                <dataScope>meta_title</dataScope>
            </settings>
        </field>
        <field name="meta_keywords" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Meta Keywords</label>
                <dataScope>meta_keywords</dataScope>
            </settings>
        </field>
        <field name="meta_description" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Meta Description</label>
                <dataScope>meta_description</dataScope>
            </settings>
        </field>
    </fieldset>
    <fieldset name="design" sortOrder="50">
        <settings>
            <collapsible>true</collapsible>
            <label translate="true">Design</label>
        </settings>
        <field name="today_deal_layout" formElement="select" class="Magento\Cms\Ui\Component\Form\Field\PageLayout">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Layout</label>
                <dataScope>today_deal_layout</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Magento\Cms\Model\Page\Source\PageLayout"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="layout_update_xml" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="disabled" xsi:type="boolean">true</item>
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Layout Update XML</label>
                <dataScope>layout_update_xml</dataScope>
            </settings>
        </field>
        <field name="custom_layout_update_select" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Custom Layout Update</label>
                <tooltip>
                    <description translate="true">
                        List of layout files with an update handle "selectable"
                        matching *PageIdentifier*_*UpdateID*.
                        &lt;br/&gt;
                        See Magento documentation for more information
                    </description>
                </tooltip>
                <dataScope>layout_update_selected</dataScope>
            </settings>
        </field>
    </fieldset>
    <fieldset name="promotion" sortOrder="60">
        <settings>
            <label translate="true">Promotion</label>
            <collapsible>true</collapsible>
        </settings>
        <field name="promo_id" sortOrder="5" formElement="input">
            <settings>
                <dataType>number</dataType>
                <label translate="true">Promo ID</label>
                <dataScope>promo_id</dataScope>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="promo_name" sortOrder="10" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Promo Name</label>
                <dataScope>promo_name</dataScope>
            </settings>
        </field>
        <field name="promo_creative" sortOrder="15" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Promo Creative</label>
                <dataScope>promo_creative</dataScope>
            </settings>
        </field>
    </fieldset>
    <fieldset name="web_configuration" sortOrder="65">
        <settings>
            <label translate="true">Web Configuration</label>
            <collapsible>true</collapsible>
        </settings>
        <field name="is_redirect_to_plp" sortOrder="10" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Is Redirect to PLP</label>
                <dataScope>is_redirect_to_plp</dataScope>
                <notice translate="true">
                    If this field is enabled, this campaign page will redirect to a category's PLP
                </notice>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="category_to_redirect" sortOrder="20" formElement="select"
               component="Magento_Catalog/js/components/new-category">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filterOptions" xsi:type="boolean">true</item>
                    <item name="multiple" xsi:type="boolean">false</item>
                    <item name="showCheckbox" xsi:type="boolean">false</item>
                    <item name="disableLabel" xsi:type="boolean">true</item>
                    <item name="levelsVisibility" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <elementTmpl>ui/grid/filters/elements/ui-select</elementTmpl>
                <label translate="true">Category to Redirect</label>
                <dataScope>category_to_redirect</dataScope>
                <componentType>field</componentType>
                <listens>
                    <link name="${ $.namespace }.${ $.namespace }:responseData">setParsed</link>
                </listens>
                <notice translate="true">
                    Assign a category to this campaign page
                </notice>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Magento\Catalog\Ui\Component\Product\Form\Categories\Options"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="mobile" sortOrder="70">
        <settings>
            <label translate="true">Mobile Information</label>
            <collapsible>true</collapsible>
        </settings>
        <field name="publish_from" sortOrder="5" formElement="date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Campaign Period From</label>
                <visible>true</visible>
                <dataScope>publish_from</dataScope>
            </settings>
            <formElements>
                <date>
                    <settings>
                        <options>
                            <option name="showsTime" xsi:type="boolean">true</option>
                            <option name="dateFormat" xsi:type="string">MMM d, YYYY</option>
                            <option name="timeFormat" xsi:type="string">H:mm:ss</option>
                        </options>
                    </settings>
                </date>
            </formElements>
        </field>
        <field name="publish_to" sortOrder="10" formElement="date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Campaign Period To</label>
                <visible>true</visible>
                <dataScope>publish_to</dataScope>
            </settings>
            <formElements>
                <date>
                    <settings>
                        <options>
                            <option name="showsTime" xsi:type="boolean">true</option>
                            <option name="dateFormat" xsi:type="string">MMM d, YYYY</option>
                            <option name="timeFormat" xsi:type="string">H:mm:ss</option>
                        </options>
                    </settings>
                </date>
            </formElements>
        </field>
        <field name="mb_is_highlighted" sortOrder="20" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Is Highlighted</label>
                <dataScope>mb_is_highlighted</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="mb_short_title" sortOrder="50" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Short Title</label>
                <notice translate="true">To be displayed on Deal tabs</notice>
                <dataScope>mb_short_title</dataScope>
            </settings>
        </field>
        <field name="mb_short_description" sortOrder="60" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Short Description</label>
                <notice translate="true">To be displayed on Campaign Listing page</notice>
                <dataScope>mb_short_description</dataScope>
            </settings>
            <formElements>
                <textarea>
                    <settings>
                        <rows>4</rows>
                    </settings>
                </textarea>
            </formElements>
        </field>
        <field name="mb_all_products_category" sortOrder="70" formElement="select"
               component="Magento_Catalog/js/components/new-category">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filterOptions" xsi:type="boolean">true</item>
                    <item name="multiple" xsi:type="boolean">false</item>
                    <item name="showCheckbox" xsi:type="boolean">false</item>
                    <item name="disableLabel" xsi:type="boolean">true</item>
                    <item name="levelsVisibility" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <required>true</required>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <elementTmpl>ui/grid/filters/elements/ui-select</elementTmpl>
                <label translate="true">All Products Category</label>
                <dataScope>mb_all_products_category</dataScope>
                <componentType>field</componentType>
                <listens>
                    <link name="${ $.namespace }.${ $.namespace }:responseData">setParsed</link>
                </listens>
                <notice translate="true">
                    To show All Products and Sub-Categories block (if any) on Campaign Detail page
                </notice>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Magento\Catalog\Ui\Component\Product\Form\Categories\Options"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="mb_image" sortOrder="80">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="source" xsi:type="string">post</item>
                    <item name="label" xsi:type="string" translate="true">Campaign Detail Image</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="formElement" xsi:type="string">imageUploader</item>
                    <item name="elementTmpl" xsi:type="string">ui/form/element/uploader/image</item>
                    <item name="previewTmpl" xsi:type="string">Magento_Catalog/image-preview</item>
                    <item name="required" xsi:type="boolean">false</item>
                    <item name="uploaderConfig" xsi:type="array">
                        <item name="url" xsi:type="url" path="sm_filemanagement/file/upload"/>
                    </item>
                    <item name="notice" xsi:type="string" translate="true">
                        Only accept png/jpeg. Recommended size 100 x 100 px.
                    </item>
                </item>
            </argument>
        </field>
        <field name="file" sortOrder="90">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Campaign Detail Video</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="formElement" xsi:type="string">fileUploader</item>
                    <item name="allowedExtensions" xsi:type="string">
                        flv mp4 avi mov rm wmv
                    </item>
                    <item name="notice" xsi:type="string">
                        Allowed file types flv mp4 avi mov rm wmv
                    </item>
                    <item name="placeholderType" xsi:type="string">document</item>
                    <item name="maxFileSize" xsi:type="string">104857600</item>
                    <item name="uploaderConfig" xsi:type="array">
                        <item name="url" xsi:type="url" path="sm_filemanagement/file/upload/"/>
                    </item>
                </item>
            </argument>
        </field>
        <field name="mb_most_popular_products_category" sortOrder="110" formElement="select"
               component="Magento_Catalog/js/components/new-category">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filterOptions" xsi:type="boolean">true</item>
                    <item name="multiple" xsi:type="boolean">false</item>
                    <item name="showCheckbox" xsi:type="boolean">false</item>
                    <item name="disableLabel" xsi:type="boolean">true</item>
                    <item name="levelsVisibility" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <required>true</required>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <elementTmpl>ui/grid/filters/elements/ui-select</elementTmpl>
                <label translate="true">Most Popular Category</label>
                <dataScope>mb_most_popular_products_category</dataScope>
                <componentType>field</componentType>
                <listens>
                    <link name="${ $.namespace }.${ $.namespace }:responseData">setParsed</link>
                </listens>
                <notice translate="true">
                    To show Most Popular Products block on Campaign Detail page
                </notice>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Magento\Catalog\Ui\Component\Product\Form\Categories\Options"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="mb_signature_true_title" sortOrder="119" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Title</label>
                <notice translate="true">Campaign Title</notice>
                <dataScope>mb_signature_true_title</dataScope>
            </settings>
        </field>
        <field name="mb_signature_description" sortOrder="120" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Description</label>
                <notice translate="true">To show after Signature Products block, if any</notice>
                <dataScope>mb_signature_description</dataScope>
            </settings>
            <formElements>
                <textarea>
                    <settings>
                        <rows>4</rows>
                    </settings>
                </textarea>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="related_campaigns" sortOrder="80">
        <settings>
            <label translate="true">Mobile Related Campaigns Block</label>
            <collapsible>true</collapsible>
