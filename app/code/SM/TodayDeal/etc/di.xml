<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../../../../lib/internal/Magento/Framework/ObjectManager/etc/config.xsd">
    <!-- API -->
    <preference for="SM\TodayDeal\Api\Data\PostSearchResultInterface" type="SM\TodayDeal\Model\PostSearchResults"/>
    <preference for="SM\TodayDeal\Api\Data\PostInterface" type="SM\TodayDeal\Model\Post" />
    <preference for="SM\TodayDeal\Api\PostRepositoryInterface" type="SM\TodayDeal\Model\PostRepository" />
    <preference for="SM\TodayDeal\Api\Data\CampaignListingMobileInterface"
                type="SM\TodayDeal\Model\CampaignListingMobile"/>
    <preference for="SM\TodayDeal\Api\Data\CampaignDetailsMobileInterface"
                type="SM\TodayDeal\Model\CampaignDetailsMobile"/>
    <preference for="SM\TodayDeal\Api\Data\ProductsSearchResultInterface"
                type="SM\TodayDeal\Model\ProductsSearchResult"/>
    <preference for="SM\TodayDeal\Api\Data\CampaignCategoryInterface" type="SM\TodayDeal\Model\CampaignCategory"/>
    <preference for="SM\TodayDeal\Api\Data\MenuDealListingMobileInterface"
                type="SM\TodayDeal\Model\MenuDealListingMobile"/>
    <preference for="SM\TodayDeal\Api\Data\FlashSaleDetailsMobileInterface"
                type="SM\TodayDeal\Model\FlashSaleDetailsMobile"/>

    <virtualType name="SM\TodayDeal\Model\Api\SearchCriteria\CollectionProcessor\PostFilterProcessor"
                 type="Magento\Framework\Api\SearchCriteria\CollectionProcessor\FilterProcessor">
        <arguments>
            <argument name="customFilters" xsi:type="array">
                <item name="search" xsi:type="object">
                    SM\TodayDeal\Model\Api\SearchCriteria\CollectionProcessor\FilterProcessor\SearchFilter
                </item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="SM\TodayDeal\Model\Api\SearchCriteria\PostCollectionProcessor"
                 type="Magento\Framework\Api\SearchCriteria\CollectionProcessor">
        <arguments>
            <argument name="processors" xsi:type="array">
                <item name="filters" xsi:type="object">SM\TodayDeal\Model\Api\SearchCriteria\CollectionProcessor\PostFilterProcessor</item>
                <item name="sorting" xsi:type="object">Magento\Framework\Api\SearchCriteria\CollectionProcessor\SortingProcessor</item>
                <item name="pagination" xsi:type="object">Magento\Framework\Api\SearchCriteria\CollectionProcessor\PaginationProcessor</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="SM\TodayDeal\Model\PostRepository">
        <arguments>
            <argument name="collectionProcessor" xsi:type="object">SM\TodayDeal\Model\Api\SearchCriteria\PostCollectionProcessor</argument>
        </arguments>
    </type>

    <!-- Ui Component -->
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="todaydeal_post_listing_data_source" xsi:type="string">SM\TodayDeal\Model\ResourceModel\Post\Grid\Collection</item>
            </argument>
        </arguments>
    </type>
    <type name="SM\TodayDeal\Model\ResourceModel\Post\Grid\Collection">
        <arguments>
            <argument name="mainTable" xsi:type="string">trans_today_deals</argument>
            <argument name="eventPrefix" xsi:type="string">trans_today_deals_grid_collection</argument>
            <argument name="eventObject" xsi:type="string">trans_today_deals_collection</argument>
            <argument name="resourceModel" xsi:type="string">SM\TodayDeal\Model\ResourceModel\Post</argument>
        </arguments>
    </type>

    <type name="Magento\Framework\Model\Entity\RepositoryFactory">
        <arguments>
            <argument name="entities" xsi:type="array">
                <item name="SM\TodayDeal\Api\Data\PostInterface" xsi:type="string">SM\TodayDeal\Api\PostRepositoryInterface</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Framework\EntityManager\MetadataPool">
        <arguments>
            <argument name="metadata" xsi:type="array">
                <item name="SM\TodayDeal\Api\Data\PostInterface" xsi:type="array">
                    <item name="entityTableName" xsi:type="string">trans_today_deals</item>
                    <item name="identifierField" xsi:type="string">post_id</item>
                </item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Framework\EntityManager\Operation\ExtensionPool">
        <arguments>
            <argument name="extensionActions" xsi:type="array">
                <item name="SM\TodayDeal\Api\Data\PostInterface" xsi:type="array">
                    <item name="read" xsi:type="array">
                        <item name="storeReader" xsi:type="string">SM\TodayDeal\Model\ResourceModel\Post\Relation\Store\ReadHandler</item>
                    </item>
                    <item name="create" xsi:type="array">
                        <item name="storeCreator" xsi:type="string">SM\TodayDeal\Model\ResourceModel\Post\Relation\Store\SaveHandler</item>
                    </item>
                    <item name="update" xsi:type="array">
                        <item name="storeUpdater" xsi:type="string">SM\TodayDeal\Model\ResourceModel\Post\Relation\Store\SaveHandler</item>
                    </item>
                </item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Framework\EntityManager\HydratorPool">
        <arguments>
            <argument name="hydrators" xsi:type="array">
                <item name="SM\TodayDeal\Api\Data\PostInterface" xsi:type="string">Magento\Framework\EntityManager\AbstractModelHydrator</item>
            </argument>
        </arguments>
    </type>
</config>
