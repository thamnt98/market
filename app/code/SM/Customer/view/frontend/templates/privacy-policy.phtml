<script>
    require(
        [
            'jquery',
            'Magento_Ui/js/modal/modal'
        ], function ($, modal) {
            let registerPrivacy = $('#register-privacy-policy'),
                privacyPopup = $('#privacy-popup'),
                options = {
                    type: 'popup',
                    responsive: true,
                    innerScroll: false,
                    clickableOverlay: false,
                    modalClass: 'terms-privacy',
                    title: '',
                    buttons: []
                };

            modal(options, privacyPopup);
            registerPrivacy.on('click', function () {
                $('#register').modal('closeModal');
                privacyPopup.modal('openModal').show();
            });

            privacyPopup.find('[selector=action-back]').click(function () {
                privacyPopup.modal('closeModal');
                $('#register').modal('openModal').show();
            });
        }
    )
</script>
