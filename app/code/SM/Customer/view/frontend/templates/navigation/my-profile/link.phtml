<?php
$highlight = '';

if ($block->getIsHighlighted()) {
    $highlight = 'current';
}
?>

<?php if ($block->isCurrent()) : ?>
    <li class="nav item current">
        <strong>
            <?= $block->escapeHtml(__($block->getLabel())) ?>
            <?= $block->getChildHtml('my-profile-notification-icon'); ?>
        </strong>
    </li>
<?php else : ?>
    <li class="nav item <?= $highlight ?>">
        <a href="<?= $block->escapeHtml($block->getHref()) ?>"
            <?= $block->getTitle() ? ' title="' . $block->escapeHtml(__($block->getTitle())) . '"' : ''; ?>
            <?= $block->getAttributesHtml() ?> >

            <?php if ($block->getIsHighlighted()) : ?>
                <strong><?= $block->escapeHtml(__($block->getLabel())); ?></strong>
            <?php else : ?>
                <?= $block->escapeHtml(__($block->getLabel())); ?>
            <?php endif; ?>

            <?= $block->getChildHtml('my-profile-notification-icon'); ?>
        </a>
    </li>
<?php endif; ?>
