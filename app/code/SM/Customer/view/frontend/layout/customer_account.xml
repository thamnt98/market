<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
      label="Customer My Account (All Pages)" design_abstraction="custom">
    <body>
        <referenceBlock name="customer-account-navigation-account-link">
            <arguments>
                <argument name="template" xsi:type="string">SM_Customer::navigation/my-profile/link.phtml</argument>
            </arguments>
            <block class="SM\Customer\Block\Navigation\MyProfile"
                   name="my-profile-notification-icon" as="my-profile-notification-icon"
                   template="SM_Customer::navigation/my-profile/icon.phtml"/>
        </referenceBlock>
        <referenceBlock name="customer-account-navigation-address-link">
            <arguments>
                <argument name="template" xsi:type="string">SM_Customer::navigation/my-address/link.phtml</argument>
            </arguments>
            <block class="SM\Customer\Block\Navigation\MyAddress"
                   name="my-address-notification-icon" as="my-address-notification-icon"
                   template="SM_Customer::navigation/my-address/icon.phtml"/>
        </referenceBlock>
    </body>
</page>
