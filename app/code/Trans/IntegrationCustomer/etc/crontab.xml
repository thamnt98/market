<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">

    <group id="centralize_customer">
        <job name="integration_centralize_register_customer" instance="Trans\IntegrationCustomer\Cron\Centralize\RegisterNewCustomer" method="execute">
            <schedule>* * * * *</schedule>
        </job>
    </group>
    <group id="centralize_customer_update">
        <job name="integration_centralize_edit_customer" instance="Trans\IntegrationCustomer\Cron\Centralize\EditCustomerAccount" method="execute">
            <schedule>* * * * *</schedule>
        </job>        
    </group>
</config>
