<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/customer/profile/update" method="POST">
        <service class="Trans\IntegrationCustomer\Api\IntegrationCustomerInterface" method="updateCdbCustomerProfile"/>
        <resources>
            <resource ref="self"/>
        </resources>
        <data>
            <parameter name="magento_customer_id" force="true">%magento_customer_id%</parameter>
            <parameter name="lastname" force="true">%lastname%</parameter>
            <parameter name="firsname" force="true">%firsname%</parameter>
            <parameter name="telephone" force="true">%telephone%</parameter>
        </data>
    </route>

    <route url="/V1/customer/register/cdb" method="POST">
        <service class="Trans\IntegrationCustomer\Api\IntegrationCustomerInterface" method="newCustomerIntegration"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>

    <route url="/V1/customer/update/cdb" method="POST">
        <service class="Trans\IntegrationCustomer\Api\IntegrationCustomerInterface" method="updateCustomerIntegration"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
</routes>
