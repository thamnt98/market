<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/locationcoverage/region/:region" method="GET">
        <service class="Trans\LocationCoverage\Api\AllLocationRepositoryInterface" method="getRegionCode"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/locationcoverage/city/:city" method="GET">
        <service class="Trans\LocationCoverage\Api\AllLocationRepositoryInterface" method="getCityCode"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/locationcoverage/district/:district" method="GET">
        <service class="Trans\LocationCoverage\Api\AllLocationRepositoryInterface" method="getDistrictCode"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
