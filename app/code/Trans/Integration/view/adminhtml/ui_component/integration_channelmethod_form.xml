<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">integration_channelmethod_form.integration_channelmethod_form_data_source</item>
            <item name="deps" xsi:type="string">integration_channelmethod_form.integration_channelmethod_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Product Buffer Information</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">integration_channelmethod_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        
        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="array">
                <item name="name" xsi:type="string">back</item>
                <item name="label" xsi:type="string" translate="true">Back</item>
                <item name="class" xsi:type="string">back</item>
                <item name="url" xsi:type="string">*/*/index</item>
            </item>
            <item name="save" xsi:type="array">
                <item name="name" xsi:type="string">save</item>
                <item name="label" xsi:type="string" translate="true">Save</item>
                <item name="class" xsi:type="string">primary</item>
            </item>
        </item>
    </argument>
    
    <dataSource name="integration_channelmethod_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Trans\Integration\Ui\DataProvider\IntegrationChannelMethodProvider</argument>
            <argument name="name" xsi:type="string">integration_channelmethod_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
                <item name="submit_url" path="*/*/save" xsi:type="url"></item>
            </item>
        </argument>
    </dataSource>

    <fieldset name="channelmethod_details">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">false</item>
                <item name="label" xsi:type="string" translate="true">Channel Details</item>
                <item name="sortOrder" xsi:type="number">20</item>
            </item>
        </argument>
        <field name="id" formElement="hidden">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">trans_integration</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
            </settings>
        </field>
        <field name="ch_id">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Trans\Integration\Model\Config\Source\Channel</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Channel</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">trans_integration</item>
                    <item name="dataScope" xsi:type="string">ch_id</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="tag">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Tag</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">trans_integration</item>
                    <item name="dataScope" xsi:type="string">tag</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="desc">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">textarea</item>
                    <item name="label" xsi:type="string" translate="true">Desc</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">trans_integration</item>
                    <item name="dataScope" xsi:type="string">desc</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="method">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Trans\Integration\Model\Config\Source\Method</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Method</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">trans_integration</item>
                    <item name="dataScope" xsi:type="string">method</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="path">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Path</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">trans_integration</item>
                    <item name="dataScope" xsi:type="string">path</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="headers">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Headers</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">trans_integration</item>
                    <item name="default" xsi:type="string">{}</item>
                    <item name="dataScope" xsi:type="string">headers</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="query_params">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Query Params</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">trans_integration</item>
                    <item name="default" xsi:type="string">{}</item>
                    <item name="dataScope" xsi:type="string">query_params</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="body">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Body</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">trans_integration</item>
                    <item name="default" xsi:type="string">{}</item>
                    <item name="dataScope" xsi:type="string">body</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="limit">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Limit</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">trans_integration</item>
                    <item name="default" xsi:type="string">100</item>
                    <item name="dataScope" xsi:type="string">limit</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="status">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magento\Config\Model\Config\Source\Enabledisable</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Status</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">trans_integration</item>
                    <item name="dataScope" xsi:type="string">status</item>
                    <item name="default" xsi:type="string">1</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>       
    </fieldset>
</form>
