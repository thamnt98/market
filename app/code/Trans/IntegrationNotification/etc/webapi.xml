<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/notification/sendsms" method="POST">
        <service class="Trans\IntegrationNotification\Api\IntegrationNotificationInterface" method="sendSms"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/notification/sendemail" method="POST">
        <service class="Trans\IntegrationNotification\Api\IntegrationNotificationInterface" method="sendEmail"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/notification/pushnotif" method="POST">
        <service class="Trans\IntegrationNotification\Api\IntegrationNotificationInterface" method="pushNotif"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>