<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="notification" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Notification System</label>
            <tab>trans</tab>
            <resource>Trans_IntegrationNotification::config</resource>
            <group id="general" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General</label>
                <field id="enabled" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="is_production" translate="label" type="select" sortOrder="4" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Is Production</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="key" translate="label" type="text" sortOrder="4" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>App Key</label>
                </field>
            </group>
            <group id="base_url" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>URL</label>
                <field id="url_dev" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Base URL Dev</label>
                    <source_model>Trans\Integration\Model\Config\Source\BaseUrl</source_model>
                </field>
                <field id="url_prod" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Base URL Prod</label>
                    <source_model>Trans\Integration\Model\Config\Source\BaseUrl</source_model>
                </field>
                <field id="publish_url" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Publish URL</label>
                </field>
            </group>
        </section>
    </system>
</config>