<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="integrationtpl" translate="label" type="text" sortOrder="1000" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Third Party Logistic</label>
            <tab>trans</tab>
            <resource>Trans_Integration::config</resource>
            <group id="tpl_logistic" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="1" translate="label">
                <label>TPL</label>
                <field id="apiurl_tracking" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="2" translate="label"
                       type="text">
                    <label>API URL Get Fee Logistic</label>
                    <validate>required-entry</validate>
                </field>
                <field id="client_id" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="2" translate="label"
                       type="text">
                    <label>Client ID</label>
                    <validate>required-entry</validate>
                </field>
                <field id="client_secret" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="2" translate="label"
                       type="text">
                    <label>Client Secret</label>
                    <validate>required-entry</validate>
                </field>
            </group>
        </section>
    </system>
</config>