<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="custom_quote_proces">
        <observer name="TransMepayObserverMagentoCheckoutModelSession" instance="Trans\Mepay\Observer\Magento\Checkout\Model\Session" />
    </event>
    <event name="sales_order_place_after">
        <observer name="TransMepayObserverMagentoSalesModelOrder" instance="Trans\Mepay\Observer\Magento\Sales\Model\Order" />
    </event>
    <event name="controller_action_predispatch">
        <observer name="TransMepayObserverMagentoFrameworkAppInterfaceAutoRecoverCartForPendingPayment" instance="Trans\Mepay\Observer\Magento\Framework\AppInterface\AutoRecoverCartForPendingPayment" />
    </event>
</config>

